<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- account.bank.statement.helper form view -->
    <record id="view_account_bank_statement_helper_form" model="ir.ui.view">
        <field name="name">account.bank.statement.helper.view.form</field>
        <field name="model">account.bank.statement.helper</field>
        <field name="arch" type="xml">
            <form string="Bank Statement">
				<sheet>
                    <div class="oe_title">
					    <h1>
						    <field name="statement_id" readonly="1" options="{'no_open':true}" />
					    </h1>
                    </div>
                    <group>
					    <field name="journal_id" readnoly="1" options="{'no_open':true}" />
                        <field name="report_type" />
                    </group>
					<footer>
						<button name="button_confirm" type="object" class="oe_highlight" string="Confirm" />
						<button special="cancel" string="Cancel" class="btn-secondary" />
					</footer>
				</sheet>
			</form>
		</field>
	</record>

</odoo>
