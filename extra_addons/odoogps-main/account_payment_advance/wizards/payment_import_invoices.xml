<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- account.payment.import.invoices form view -->
    <record id="view_account_payment_import_invoices_form" model="ir.ui.view">
        <field name="name">account.payment.import.invoices.view.form</field>
        <field name="model">account.payment.import.invoices</field>
        <field name="arch" type="xml">
            <form string="Import Invoices">
                <div class="oe_title">
                    <h1>
                        <field name="payment_id" readonly="1" force_save="1" options="{'no_open':true}"/>
                    </h1>
                </div>
                <field name="state" invisible="1" />
                <group attrs="{'invisible': [('state', '!=', 'draft')]}">
                    <field name="xlsx_filename" invisible="1" />
                    <field name="xlsx_file" filename="xlsx_filename" />
                </group>
                <group string="Errors" attrs="{'invisible': [('state', '=', 'draft')]}">

                    <field name="message" nolabel="1" readonly="1" />
                </group>
                <footer>
                    <button name="button_confirm" string="Confirm" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <span attrs="{'invisible': [('state', '!=', 'draft')]}">or</span>
                    <button special="cancel" string="Cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>

    <!-- account.payment.import.invoices action -->
    <record id="action_account_payment_import_invoices" model="ir.actions.act_window">
        <field name="name">Import Invoices</field>
        <field name="res_model">account.payment.import.invoices</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
