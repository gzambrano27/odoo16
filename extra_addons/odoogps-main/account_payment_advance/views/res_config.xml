<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- res.config.settings form inherit view -->
    <record id="view_res_config_settings_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='account_batch_payment']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="account_customer_prepayment">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Customer Pre-payment Account</span>
                        <div class="text-muted">
                           Counterpart for the prepayment move, for example: Prepayment for customers
                        </div>
                        <div class="text-muted">
                            <field name="account_default_customer_prepayment_id"/>
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@id='print_checks']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="account_supplier_prepayment">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Supplier Pre-payment Account</span>
                        <div class="text-muted">
                           Counterpart for the prepayment move, for example: Prepayment for suppliers
                        </div>
                        <div class="text-muted">
                            <field name="account_default_supplier_prepayment_id"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
