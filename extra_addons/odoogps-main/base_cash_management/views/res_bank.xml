<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- res.bank form inherit view -->
    <record id="view_res_bank_form_inherit" model="ir.ui.view">
        <field name="name">res.bank.view.form.inherit</field>
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.view_res_bank_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[last()]" posintion="after">
                <field name="bank_code_ids">
                    <tree string="Bank Codes" editable="bottom">
                        <field name="bank_id" options="{'limit': 10, 'create': false, 'create_edit': false, 'no_open': true}" />
                        <field name="code" />
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

</odoo>
