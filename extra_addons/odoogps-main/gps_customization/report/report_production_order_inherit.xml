<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_production_order_responsible" inherit_id="mrp.report_mrporder">
        <xpath expr="//div/div[2]" position="after">
            <br/>
        </xpath>
        <xpath expr="//div/div[3]/div[2]" position="replace">
            <div class="col-2">
                <strong>Responsible for Assembly:</strong><br/>
                <div t-if="o.assembly_responsible">
                    <span t-field="o.assembly_responsible"/>
                </div>
            </div>
            <div class="col-2">
                <strong>Responsible for Equipment:</strong><br/>
                <div t-if="o.equipment_responsible">
                    <span t-field="o.equipment_responsible"/>
                </div>
            </div>
            <div class="col-2">
                <strong>Responsible for Force:</strong><br/>
                <div t-if="o.force_responsible">
                    <span t-field="o.force_responsible"/>
                </div>
            </div>
            <div class="col-2">
                <strong>Responsible for Control:</strong><br/>
                <div t-if="o.control_responsible">
                    <span t-field="o.control_responsible"/>
                </div>
            </div>
        </xpath>
        <xpath expr="//div/div[4]/div[3]" position="after">
            <div class="col-2">
                <strong>Board Name:</strong><br/>
                <div t-if="o.lot_producing_id.name">
                    <span t-field="o.lot_producing_id.name"/>
                </div>
            </div>
            <div class="col-2">
                <strong>Project:</strong><br/>
                <div t-if="o.analytic_account_id.name">
                    <span t-field="o.analytic_account_id.name"/>
                </div>
            </div>
        </xpath>
        <xpath expr="//table/thead/tr/th[3]" position="after">
            <th>CÃ³digo Anterior</th>
        </xpath>
        <xpath expr="//table/tbody/t/tr/td[3]" position="after">
            <td>
                <span t-field="raw_line.product_id.old_code"/>
            </td>
        </xpath>
    </template>
</odoo>