<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//div[hasclass('page')]/div[@id='informations']/div[4]" position="after">
                <div t-elif="o.payment_term_id" class="col-3 bm-2">
                    <strong>Payment Term:</strong>
                    <p t-field="o.payment_term_id" class="m-0"/>
                </div>
            </xpath>
            <xpath expr="//div[hasclass('page')]/table/thead/tr/th[@name='th_date_req']"
                   position="replace">
                <th name="th_date_req" class="text-end"><strong>Analityc Account</strong></th>
            </xpath>

            <xpath expr="//div[hasclass('page')]/table/tbody/tr/td[hasclass('text-center')]"
                   position="replace">
                <td class="text-center">
                    <div t-foreach="line.analytic_distribution" t-as="distribution">
                        <t t-esc="line.env['account.analytic.account'].browse(int(distribution))[0].name"/>: <t
                            t-esc="line.analytic_distribution.get(distribution)"/>
                    </div>
                </td>
            </xpath>

        </template>


    </data>
</odoo>