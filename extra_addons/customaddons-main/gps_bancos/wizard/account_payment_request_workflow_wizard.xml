<?xml version="1.0"?>
<odoo>
    <data>



    <record id="view_account_payment_request_workflow_wizard_form" model="ir.ui.view">
        <field name="name">account.payment.request.workflow.wizard.form</field>
        <field name="model">account.payment.request.workflow.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmar Anulación">
                <group>
                       <group>
                  <field name="motive_id" required="1" colspan="2"
                         options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                  domain="[('type','=','anulacion'),('default_mode_payment','in',('*',default_mode_payment))]"
                  />
                 <field name="date" colspan="2" required="1"/>
                                     <field name="ref" colspan="2" required="1"/>
                    <field name="comments" colspan="2" required="1"/>
                </group>
                <group>
                    <field name="default_mode_payment" invisible="1"/>
                         <field name="full_reversed" colspan="2" readonly="1" force_save="1" invisible="1"/>
                          <field name="amount" colspan="2" required="1" readonly="1" force_save="1"/>
                    </group>
                </group>
                <footer>
                    <button name="process" string="Confirmar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_payment_request_workflow_wizard" model="ir.actions.act_window">
        <field name="name">Confirmar Anulación</field>
        <field name="res_model">account.payment.request.workflow.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_account_payment_request_workflow_wizard_form"/>
        <field name="target">new</field>
    </record>




    </data>

</odoo>