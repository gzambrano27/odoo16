<?xml version="1.0" ?>

<odoo>
    <record id="view_picking_form_inherit_totals_footer" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.totals.footer</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <!-- Insertar debajo de las operaciones -->
            <xpath expr="//field[@name='move_ids_without_package']" position="after">
            <group class="oe_subtotal_footer oe_right"  groups="purchase.group_purchase_user,account.group_account_invoice">
                    <field name="po_received_subtotal" readonly="1"  />

                    <field name="po_received_tax" readonly="1"  />
<field name="currency_id" invisible="1"  />
                    <field name="po_received_total" readonly="1"   class="oe_subtotal_footer_separator"/>

                </group>
            </xpath>

        </field>
    </record>
</odoo>
