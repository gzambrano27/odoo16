<?xml version="1.0"?>
<odoo>
    <data>


        <record id="document_financial_version_search"
                model="ir.ui.view">
            <field name="name">document.financial.version.search</field>
            <field name="model">document.financial.version</field>
            <field name="type">search</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml" >
                <search>
                    <field name="document_id" />
                     <field name="name"  />
                 <field name="date"  />
                </search>

            </field>
        </record>

        <record id="document_financial_version_tree"
                model="ir.ui.view">
            <field name="name">document.financial.version.tree</field>
            <field name="model">document.financial.version</field>
            <field name="type">tree</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml" >
                <tree create="false" delete="false" edit="false" >
                                        <field name="document_id" />
                     <field name="name"  />
                 <field name="date"  />

                         <field name="total" sum="total"/>
                             <field name="total_to_paid" sum="total"/>
                             <field name="total_paid" sum="total"/>
                             <field name="total_pending" sum="total"/>


                </tree>

            </field>
        </record>

        <record id="document_financial_version_form"
                model="ir.ui.view">
            <field name="name">document.financial.version.form</field>
            <field name="model">document.financial.version</field>
            <field name="type">form</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml" >
                  <form create="false" delete="false" edit="false" version="16.0" >
                    <group colspan="4">
                        <group>
                                                <field name="document_id"
                                                       options="{'no_create':True,'no_edit':True }"
                                                       colspan="2" />
                            <field name="name" colspan="2" />
                              <field name="date" colspan="2" />
                        </group>
                        <group>

                                 <field name="total" colspan="2"  readonly="1" force_save="1"/>
                             <field name="total_to_paid" colspan="2"  readonly="1" force_save="1"/>
                             <field name="total_paid" colspan="2"  readonly="1" force_save="1"/>
                             <field name="total_pending" colspan="2"  readonly="1" force_save="1"/>

                        </group>
                    </group>
                    <newline/>
                    <field name="line_ids" nolabel="1" colspan="4"
                    context="{'tree_view_ref':'gps_bancos.document_financial_line_view_tree_copy','form_view_ref':'gps_bancos.document_financial_line_view_form_copy'}"
                    />




                  </form>
            </field>
        </record>




<!--      -->

         <record id="document_financial_version2_view_action"
            model="ir.actions.act_window">
        <field name="name">Versi√≥n de Documento</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">document.financial.version</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[ ]</field>
        <field name="context">{ }</field>
        <field name="view_id"
               ref="document_financial_version_tree"/>
              <field name="search_view_id"
               ref="document_financial_version_search"/>
    </record>

    <record model="ir.actions.act_window.view"
            id="document_financial_version2_tree_view_action">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id"
               ref="document_financial_version_tree"/>
        <field name="act_window_id"
               ref="document_financial_version2_view_action"/>
    </record>

    <record model="ir.actions.act_window.view"
            id="document_financial_version2_form_view_action">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id"
               ref="document_financial_version_form"/>
        <field name="act_window_id"
               ref="document_financial_version2_view_action"/>
    </record>



    </data>

</odoo>