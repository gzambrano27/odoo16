<?xml version="1.0"?>
<odoo>
	<data>


    <record id="account_payment_bank_macro_view_search"
            model="ir.ui.view">
        <field name="name">account.payment.bank.macro.search</field>
        <field name="model">account.payment.bank.macro</field>
        <field name="type">tree</field>
        <field eval="1" name="priority"/>
        <field name="arch" type="xml">
            <search string="Pagos a Proveedores">

                 <group expand="0" string="Filtrar...">
						<filter string="Preliminar" name="is_draft"
							domain="[('state','=','draft')]" />

                     <filter string="Generado" name="is_generated"
							domain="[('state','=','generated')]" />

                     <filter string="Confirmado" name="is_confirmed"
							domain="[('state','=','confirmed')]" />

                        <filter string="Realizado" name="is_done"
							domain="[('state','=','done')]" />
                        <filter string="Anulado" name="is_cancelled"
							domain="[('state','=','cancelled')]"
                        />

					</group>
					<group expand="0" string="Agrupar por...">
						<filter string="Estados"
							context="{'group_by':'state'}" name='grp_state' />
						<filter string="Compañia"
							context="{'group_by':'company_id'}" name='grp_company_id' />
                         <filter string="Fecha de Solicitud"
							context="{'group_by':'date_request'}" name='grp_date_request' />
 <filter string="Fecha de Pago"
							context="{'group_by':'date_payment'}" name='grp_date_payment' />
					</group>

                <field name="id" string="# ID"/>
                 <field name="number_week" string="# Sem."/>
                <field name="name"/>
                <field name="journal_id"/>
                <field name="company_id"/>
                <field name="date_payment"/>
                <field name="date_request"/>
                   <field name="ref"  />
            </search>
        </field>
    </record>


        <record id="account_payment_bank_macro_view_calendar" model="ir.ui.view">
          <field name="name">account.payment.bank.macro.calendar</field>
         <field name="model">account.payment.bank.macro</field>
			 <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar string="Pagos a Proveedores"
                      date_start="date_request"
                      date_stop="date_request"
            mode="month"
                 hide_time="true" js_class="project_calendar" event_open_popup="true"

            >
                <field name="id" string="# ID"/>
                <field name="journal_id"  filters="1"/>
                <field name="comments"/>
                <field name="amount"/>
            </calendar>
        </field>
    </record>
        
    <record id="account_payment_bank_macro_view_tree"
            model="ir.ui.view">
        <field name="name">account.payment.bank.macro.tree</field>
        <field name="model">account.payment.bank.macro</field>
        <field name="type">tree</field>
        <field eval="1" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Pagos a Proveedores" edit="false" create="false" delete="false"
               >
  <field name="id" string="# ID"/>
                <field name="default_mode_payment" />
                <field name="number_week"
                       string="# Sem."
                       attrs="{'invisible':[('number_week','&lt;=',0)]}" />
                <field name="name"/>
                <field name="journal_id"/>
                <field name="company_id"/>
                <field name="date_request"  />
                <field name="date_payment" attrs="{'invisible':['|',('date_payment','=',None),('date_payment','=',False)]}"/>
                <field name="max_amount_payments" sum="total"/>
                <field name="pending" sum="total"/>
                <field name="amount" sum="total"/>
                <field name="ref" />
                <field name="dif_max_amount_payments"  decoration-success="dif_max_amount_payments&gt;=0.00"  decoration-danger="dif_max_amount_payments&lt;0.00" />
                <field name="state" optional="show" widget="badge"
                       decoration-muted="state=='cancelled'"
                       decoration-info="state=='draft'"
                       decoration-warning="state=='generated'"
                           decoration-danger="state=='confirmed'"
                       decoration-success="state=='done'"
                />
            </tree>
        </field>
    </record>


