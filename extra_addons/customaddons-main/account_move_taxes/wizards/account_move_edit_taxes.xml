<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- account.move.edit.taxes form view -->
    <record id="view_account_move_edit_taxes_form" model="ir.ui.view">
        <field name="name">account.move.edit.taxes.view.form</field>
        <field name="model">account.move.edit.taxes</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="move_id" readonly="1" force_save="1" options="{'no_open': true}"/>
                        </h1>
                    </div>
                    <group>
                        <field name="option" required="1" />
                    </group>
                    <notebook>
                        <page string="Tax to Remove" attrs="{'invisible': [('option', '=', 'add')]}">
                            <group>
                                <field name="tax_id" attrs="{'invisible': [('option', '=', 'add')], 'required': [('option', '=', 'remove')]}"
                                       options="{'limit': 10, 'create': false, 'create_edit': false, 'search_more':true, 'no_open':true}" />
                            </group>
                        </page>
                        <page string="Taxes to Add" attrs="{'invisible': [('option', '=', 'remove')]}">
                            <field name="line_ids"  options="{'no_create': True, 'no_open': True}"
                                   attrs="{'invisible': [('option', '=', 'remove')], 'required': [('option', '=', 'add')]}">
                                <tree create="0" delete="0" editable="top">
                                    <field name="tax_id" readonly="1" force_save="1"
                                           options="{'limit': 10, 'create': false, 'create_edit': false, 'search_more':true, 'no_open':true}" />
                                    <field name="tax_domain" invisible="1" />
                                    <field name="tax_ids" widget="many2many_tags" domain="tax_domain"
                                           options="{'limit': 10, 'create': false, 'create_edit': false, 'search_more':true, 'no_open':true}" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string='Add' name="add_tax" type="object" class="btn-primary" attrs="{'invisible': [('option', '=', 'remove')]}"/>
                    <button string='Remove' name="remove_tax" type="object" class="btn-primary"  attrs="{'invisible': [('option', '=', 'add')]}"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_move_edit_taxes" model="ir.actions.act_window">
        <field name="name">Edit taxes</field>
        <field name="res_model">account.move.edit.taxes</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
