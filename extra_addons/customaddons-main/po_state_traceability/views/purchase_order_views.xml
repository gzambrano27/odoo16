<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_purchase_state_log_inherit" model="ir.ui.view">
    <field name="name">purchase.order.state.log.inh</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//notebook" position="inside">
        <page name='trazabilidad_oc' string="Trazabilidad" groups="po_state_traceability.group_po_state_traceability_view">
          <field name="state_log_ids" context="{'default_order_id': active_id}" readonly="1">
            <tree string='Logs' editable="bottom">
              <field name="changed_on"/>
              <field name="changed_by"/>
              <field name="state_from"/>
              <field name="state_to"/>
              <field name="note"/>
            </tree>
          </field>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
