<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="hr_employee_movement_line_view_search"
            model="ir.ui.view">
        <field name="name">hr.employee.movement.line.search</field>
        <field name="model">hr.employee.movement.line</field>
        <field name="type">tree</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <search string="Movimientos">

                <group expand="0" string="Filtrar...">
						<filter string="Preliminar" name="is_draft"
							domain="[('state','=','draft')]" />
                        <filter string="Aprobado" name="is_approved"
							domain="[('state','=','approved')]" />
                        <filter string="Anulado" name="is_cancelled"
							domain="[('state','=','cancelled')]" />
                        <filter string="Pagado" name="is_paid"
							domain="[('state','=','paid')]" />

					</group>
					<group expand="0" string="Agrupar por...">
						<filter string="Estados"
							context="{'group_by':'state'}" name='grp_state' />
						<filter string="Compañia"
							context="{'group_by':'company_id'}" name='grp_company_id' />
                        <filter string="Rubro"
							context="{'group_by':'rule_id'}" name='grp_rule_id' />
                        <filter string="Empleado"
							context="{'group_by':'employee_id'}" name='grp_employee_id' />
                        <filter string="Fecha"
							context="{'group_by':'date_process'}" name='grp_date_process' />

					</group>

                <field name="id"/>
                <field name="company_id"/>
                <field name="rule_id"/>
                <field name="employee_id"/>
                <field name="name"/>
                <field name="date_process"/>


            </search>
        </field>
    </record>

    <record id="hr_employee_movement_line_view_tree"
            model="ir.ui.view">
        <field name="name">hr.employee.movement.line.tree</field>
        <field name="model">hr.employee.movement.line</field>
        <field name="type">tree</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Movimientos" edit="false" create="false" delete="false"
decoration-it="account and payment and not bank_account_id"
                  decoration-muted="state=='cancelled'"
                  decoration-danger="state=='approved' and total_pending>0.00"
                  decoration-warning="state=='approved' and total_pending==0.00"
                  decoration-success="state=='paid'"
            >
                <field name="process_id" />
                <field name="id" optional="hide"/>
                <field name="company_id"/>
                <field name="rule_id"/>
                <field name="employee_id"/>
                <field name="contract_id" optional="hide"/>
                <field name="name" optional="hide"/>
                <field name="quota" optional="hide"/>
                <field name="date_process"/>


                <field name="job_id" optional="hide"/>
                <field name="department_id" optional="hide"/>

                <field name="total" sum="total" attrs="{'invisible
':[('state','not in',('approved','paid'))]}"/>
                <field name="total_to_paid" sum="total" attrs="{'invisible
':[('state','not in',('approved','paid'))]}"/>
                <field name="total_paid" sum="total" attrs="{'invisible
':[('state','not in',('approved','paid'))]}"/>
                <field name="total_pending" sum="total" attrs="{'invisible
':[('state','not in',('approved','paid'))]}"/>


                <field name="currency_id" invisible="1"/>
                <field name="state" optional="show" widget="badge"
                       decoration-muted="state=='cancelled'"
                       decoration-info="state=='draft'"
                       decoration-danger="state=='approved'"
                       decoration-success="state=='paid'"
                />
                <field name="comments" placeholder="OBSERVACIONES..." optional="hide"/>

           <field name="bank_account_id" invisible="1"/>
                <field name="payment" invisible="1" />
                                <field name="account" invisible="1" />
                 <field name="legal_iess" invisible="1" />


            </tree>
        </field>
    </record>

