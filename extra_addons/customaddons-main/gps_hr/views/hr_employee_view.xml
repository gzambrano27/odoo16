<record id="view_hr_employee_view_tree" model="ir.ui.view">
        <field name="name">hr.employee.view.tree</field>
        <field name="model">hr.employee.view</field>
        <field name="arch" type="xml">
            <tree string="Empleados" create="false" edit="false" delete="false">

                <field name="employee_id"/>
                <field name="employee_name"/>

            </tree>
        </field>
    </record>

    <!-- AcciÃ³n -->
    <record id="action_hr_employee_view_tree_only" model="ir.actions.act_window">
        <field name="name">Empleados</field>
        <field name="res_model">hr.employee.view</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_hr_employee_view_tree"/>
        <field name="target">current</field>
        <field name="context">{'only_user':True}</field>
    </record>


    </data>


