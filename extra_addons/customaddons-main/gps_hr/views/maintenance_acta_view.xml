<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista Tree -->
    <record id="view_maintenance_acta_tree" model="ir.ui.view">
        <field name="name">maintenance.acta.view.tree</field>
        <field name="model">maintenance.acta.view</field>
        <field name="arch" type="xml">
            <tree string="Actas de Entrega Abiertas" create="false" edit="false" delete="false">
                <field name="codigo"/>
                <field name="fecha"/>
                <field name="employee_id"/>
                <field name="ubicacion"/>
                <field name="equipo_recibe_name"/>
                <field name="category_name"/>
                <field name="model"/>
                <field name="serial_no"/>
            </tree>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_maintenance_acta_view" model="ir.actions.act_window">
        <field name="name">Actas de Entrega</field>
        <field name="res_model">maintenance.acta.view</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_maintenance_acta_tree"/>
        <field name="help" type="html">
            <p>Vista de las actas de entrega abiertas que no son de tipo recepción.</p>
        </field>
        <field name="context">{'only_user':True}</field>
    </record>


</odoo>