<odoo>


    <record id="view_partner_bank_new_form_hr_inh" model="ir.ui.view">
        <field name="name">view.partner.bank.form.hr.inh</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form" />
        <field name="arch" type="xml">

            <xpath expr="//page[@name='accounting']//field[@name='bank_ids']/tree/field[@name='acc_number']" position="after">
                      <field name="tercero" />
                <field
                         options="{'no_create':True,'no_edit':True,'no_open':True}"
                         name="l10n_latam_identification_tercero_id" attrs="{'invisible':[('tercero','!=',True)],'required':[('tercero','=',True)]}" />

                <field name="identificacion_tercero" attrs="{'invisible':[('tercero','!=',True)],'required':[('tercero','=',True)]}" />
                <field name="nombre_tercero" attrs="{'invisible':[('tercero','!=',True)],'required':[('tercero','=',True)]}" />

            </xpath>
        </field>
    </record>


     <record id="view_partner_bank_new_tree_hr_inhe" model="ir.ui.view">
        <field name="name">res.partner.bank.tree.hr.inherit</field>
        <field name="model">res.partner.bank</field>
        <field name="inherit_id" ref="base.view_partner_bank_tree"/>
        <field name="arch" type="xml">
            <field name="acc_number" position="after">
                 <field name="tercero" />
                <field
                         options="{'no_create':True,'no_edit':True,'no_open':True}"
                         name="l10n_latam_identification_tercero_id" attrs="{'invisible':[('tercero','!=',True)],'required':[('tercero','=',True)]}" />

                <field name="identificacion_tercero" attrs="{'invisible':[('tercero','!=',True)],'required':[('tercero','=',True)]}" />
                <field name="nombre_tercero" attrs="{'invisible':[('tercero','!=',True)],'required':[('tercero','=',True)]}" />

            </field>
        </field>
    </record>
    <record id="view_partner_bank_newform_inherit_hr_account" model="ir.ui.view">
        <field name="name">res.partner.bank.newform.inherit.hr.account</field>
        <field name="model">res.partner.bank</field>
        <field name="inherit_id" ref="account.view_partner_bank_form_inherit_account"/>
        <field name="arch" type="xml">
            <field name="acc_number" position="after">
                  <field name="tercero" />

                 <field
                         options="{'no_create':True,'no_edit':True,'no_open':True}"
                         name="l10n_latam_identification_tercero_id" attrs="{'invisible':[('tercero','!=',True)],'required':[('tercero','=',True)]}" />

                <field name="identificacion_tercero" attrs="{'invisible':[('tercero','!=',True)],'required':[('tercero','=',True)]}" />
                <field name="nombre_tercero" attrs="{'invisible':[('tercero','!=',True)],'required':[('tercero','=',True)]}" />

            </field>
        </field>
    </record>


</odoo>
