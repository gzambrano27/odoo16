<?xml version="1.0"?>
<odoo>
	<data>


<record id="hr_employee_proyeccion_wizard_form"
			model="ir.ui.view">
			<field name="name">hr.employee.proyeccion.wizard.form</field>
			<field name="model">hr.employee.proyeccion.wizard</field>
			<field name="type">form</field>
			<field eval="8" name="priority" />
			<field name="arch" type="xml">
				<form string="Crear Formulario de Proyeccion de Gastos"
					version="16.0">
					<header>
					</header>
					<group>
                        <field name="period_id"
                               options="{'no_create':True,'no_open':True,'no_edit':True}"

                               />
                        <field name="contract_ids"
                        domain="[('state','=','open'),('contract_type_id.legal_iess','=',True)]"

                        />
                    </group>
					<newline />
					<footer>
						<button name="process" type="object" string="Procesar"
							icon='fa-cogs' />
						<button special="cancel" name="cancel" string="Salir"
							colspan="2" type="object" icon='fa-times' />
					</footer>
				</form>
			</field>
		</record>


		<record id="hr_employee_proyeccion_wizard_action"
			model="ir.actions.act_window">
			<field name="name">Generar Proyeccion</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.employee.proyeccion.wizard</field>
			<field name="view_mode">form</field>
			<field name="view_id"
				ref="hr_employee_proyeccion_wizard_form" />
			<field name="context">{}</field>
			<field name="target">new</field>
		</record>

        
    </data>
    
    
</odoo>