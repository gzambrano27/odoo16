<?xml version="1.0" encoding='UTF-8'?>
<odoo>
 <data noupdate="1">

	<record model="ir.cron" id="send_mails_queue">
        <field name="name">Enviar Notificaciones RRHH</field>
        <field name="interval_number">5</field>
        <field name="sequence">900</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="active" eval="True"/>
        <field name="model_id" ref="model_hr_mail_message"/>
        <field name="state">code</field>
        <field name="code">model.send_all_pendings(10,'id desc',[])</field>
  <field name="user_id" ref="base.user_root" />
    </record>



     <!--        -->

        <record model="ir.cron" id="generate_and_update_vacations">
        <field name="name">Actualizar Periodos de Vacaciones</field>
        <field name="interval_number">8</field>
        <field name="sequence">900</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="active" eval="True"/>
        <field name="model_id" ref="model_hr_vacation_period"/>
        <field name="state">code</field>
        <field name="code">model.synchronize_periods(contract_id=0)</field>
  <field name="user_id" ref="base.user_root" />
    </record>

     <record model="ir.cron" id="vacations_end">
        <field name="name">Cerrar Periodos de Vacaciones</field>
        <field name="interval_number">8</field>
        <field name="sequence">900</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="active" eval="True"/>
        <field name="model_id" ref="model_hr_vacation_period"/>
        <field name="state">code</field>
        <field name="code">model.synchronize_ended_periods()</field>
  <field name="user_id" ref="base.user_root" />
    </record>



 </data>
</odoo>