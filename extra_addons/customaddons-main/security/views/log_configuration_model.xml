<?xml version="1.0" ?>
<odoo>
	<data>

		<record id="log_configuration_model_view_filter" model="ir.ui.view">
			<field name="name">log.configuration.model.filter</field>
			<field name="model">log.configuration.model</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Configuraci贸n de Log de Modificaciones">
					<group expand="0" string="Filtrar...">
						
					</group>
					<group expand="0" string="Agrupar por...">
						<filter string="Todos los modelos" context="{'group_by':'model_id'}" 
						name='grp_all_model_id'
						/>
					</group>
					<field name="model_id" /> 
				</search>
			</field>
		</record>

		<record id="log_configuration_model_view_tree" model="ir.ui.view">
			<field name="name">log.configuration.model.tree</field>
			<field name="model">log.configuration.model</field>
			<field name="type">tree</field>
			<field eval="8" name="priority" />
			<field name="arch" type="xml">
				<tree string="Configuraci贸n de Log de Modificaciones" decoration-muted="(locked==True)" editable="bottom">
					<field name="model_id" required="1" options="{'no_open': True, 'no_create': True}" attrs="{'readonly':[('locked','=',True)]}" />
					<field name="name" options="{'no_open': True, 'no_create': True}" attrs="{'readonly':[('locked','=',True)]}" />					
					<field name="on_create" attrs="{'readonly':[('locked','=',True)]}" />
					<field name="on_write" attrs="{'readonly':[('locked','=',True)]}" />
					<field name="on_unlink" attrs="{'readonly':[('locked','=',True)]}" />
					<field name="locked" readonly="1"/>
    
    
				</tree>
			</field>
		</record>

		<record id="log_configuration_model_view_form" model="ir.ui.view">
			<field name="name">log.configuration.model.form</field>
			<field name="model">log.configuration.model</field>
			<field name="type">form</field>
			<field eval="8" name="priority" />
			<field name="arch" type="xml">
				<form string="Configuraci贸n de Log de Modificaciones" version="16.0">
					<header>
						
					</header>
					<group colspan="4" col="2">
						<group>
							<field name="model_id" options="{'no_open': True, 'no_create': True}" attrs="{'readonly':[('locked','=',True)]}" />
					<field name="name" options="{'no_open': True, 'no_create': True}" attrs="{'readonly':[('locked','=',True)]}" />				
					<field name="locked" readonly="1"/>
						</group>
						<group>
							<field name="on_create" attrs="{'readonly':[('locked','=',True)]}" />
					<field name="on_write" attrs="{'readonly':[('locked','=',True)]}" />
					<field name="on_unlink" attrs="{'readonly':[('locked','=',True)]}" />
						</group>
					</group>
				</form>
			</field>
		</record>


		<record id="log_configuration_model_view_action" model="ir.actions.act_window">
			<field name="name">Configuraci贸n de Log de Modificaciones</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">log.configuration.model</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
			<field name="context">{'search_default_is_active':1}</field>
			<field name="view_id" ref="log_configuration_model_view_tree" />
			<field name="search_view_id" ref="log_configuration_model_view_filter" />
		</record>

		<record model="ir.actions.act_window.view" id="log_configuration_model_view_tree_action">
			<field name="sequence" eval="1" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="log_configuration_model_view_tree" />
			<field name="act_window_id" ref="log_configuration_model_view_action" />
		</record>

		<record model="ir.actions.act_window.view" id="log_configuration_model_view_form_action">
			<field name="sequence" eval="2" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="log_configuration_model_view_form" />
			<field name="act_window_id" ref="log_configuration_model_view_action" />
		</record>

	</data>
</odoo>