<?xml version="1.0" encoding="utf-8"?>
<odoo>

	
	<record id="electronic_document_received_view_filter"
		model="ir.ui.view">
		<field name="name">electronic.document.received.filter</field>
		<field name="model">electronic.document.received</field>
		<field name="type">search</field>
		<field name="arch" type="xml">
			<search string="Documentos Recibidos">
				<group expand="0" string="Agrupar por...">
					<filter name="group_by_state" string="Estado"
						context="{'group_by':'state'}"
						invisible="context.get('hide_state',False)" />
								<filter name="group_by_state_sri" string="Estado SRI"
						context="{'group_by':'state_sri'}" />
						
						<filter name="group_by_confirmed_state" string="Estado de Recepción"
						context="{'group_by':'confirmed_state'}" />
					
					<filter name="group_by_date" string="Fecha"
						context="{'group_by':'date'}" />
							
					<filter name="group_by_document_type_id"
						string="Tipo de Documento"
						context="{'group_by':'document_type_id'}" /> 
					
					<filter name="group_by_state_base_withhold_error" string="Con dif. en Bases"
						context="{'group_by':'state_base_withhold_error'}" invisible="context.get('hide_07',0)" />	 	
						
				
							
					
				
				</group>
				<group expand="0" string="Filtrar por...">
					<filter name="fltr_state_draft" string="Preliminar"
						domain="[('state','=','draft')]" />
					<filter name="fltr_state_error" string="Con Error"
						domain="[('state','=','error')]" />
					<filter name="fltr_state_updated" string="Actualizado"
						domain="[('state','=','updated')]" />
					<filter name="fltr_state_annulled" string="Anulado"
						domain="[('state','=','annulled')]" />
					<separator/>
						<filter name="fltr_confirmed_state_received" string="Recepción: Recibido"
						domain="[('confirmed_state','=','received')]" />
						<filter name="fltr_confirmed_state_rejected" string="Recepción: Rechazado"
						domain="[('confirmed_state','=','rejected')]" />
						<filter name="fltr_confirmed_state_verified" string="Recepción: Verificado"
						domain="[('confirmed_state','=','verified')]" />
						<filter name="fltr_confirmed_state_confirmed" string="Recepción Confirmado"
						domain="[('confirmed_state','=','confirmed')]" />	
					<separator/>
					<filter name="fltr_state_sri_authorized" string="Autorizado SRI"
						domain="[('state_sri','=','authorized')]" />
					<filter name="fltr_state_sri_annulled" string="Anulado SRI"
						domain="[('state_sri','=','annulled')]" />
					<filter name="fltr_state_sri_not_found" string="No encontrado o eliminado SRI"
						domain="[('state_sri','=','not_found')]" />
					<filter name="fltr_state_sri_not_processed" string="No procesado"
						domain="[('state_sri','=','not_processed')]" />							
					<separator/>
					<filter name="fltr_document01" string="Factura"
						domain="[('document_type_id.code','=','01')]" 

					invisible="context.get('hide_no_07',0)"
					
						/>
					<filter name="fltr_document04" string="Nota de Crédito"

						domain="[('document_type_id.code','=','04')]" 
						invisible="context.get('hide_no_07',0)"
						 />
					<filter name="fltr_document07" string="Retención"
						domain="[('document_type_id.code','=','07')]" 
						invisible="context.get('hide_07',0)"
						/>	
						<separator/>
					<filter name="fltr_document_filled" string="Con documento Relacionado"
						domain="['|',('invoice_id','!=',False),('withhold_id','!=',False)]" />
					<filter name="fltr_document_nofilled" string="Sin documento Relacionado"
						domain="[('invoice_id','=',False),('withhold_id','=',False)]" />
							<separator/>
					
					<filter name="fltr_state_number_error_error" string="Error al relacionar documento Base"
						domain="[('document_type_id.code','=','07'),('state_number_error','=','error')]" 
						invisible="context.get('hide_07',0)"
						 />
					<filter name="fltr_state_number_error_no" string="Sin error al relacionar documento Base"
						domain="[('document_type_id.code','=','07'),('state_number_error','=','related')]" 
						invisible="context.get('hide_07',0)"
						 />
					<separator/>
					<filter name="fltr_amount0" string="Mayor a 0"
						domain="[('amount','&gt;',0)]" />
					<filter name="fltr_not_amount0" string="Menor o igual a 0"
						domain="[('amount','&lt;=',0)]" />
					
					
				<!-- 	<newline />
					<filter name="fltr_with_diff_error" string="Con diferencias en Base"
						domain="[('document_type_id.code','=','07'),('state_base_withhold_error','=','error')]" 
						invisible="context.get('hide_07',0)"
						 />
					<filter name="fltr_with_diff_ok" string="Sin diferencias en Base"
						domain="[('document_type_id.code','=','07'),('state_base_withhold_error','=','ok')]" 
						invisible="context.get('hide_07',0)"
						 />	
					<filter name="fltr_with_diff_non" string="No es posible determinar diferencias"
						domain="[('document_type_id.code','=','07'),('state_base_withhold_error','=','none')]" 
						invisible="context.get('hide_07',0)"
						 />	-->
					<separator/>
					 <filter name="fltr_with_base_withhold" string="Base Fuente mayor a 0"
						domain="[('document_type_id.code','=','07'),('base_withhold_fte','&gt;',0)]" 
						invisible="context.get('hide_07',0)"
						 />
					<filter name="fltr_with_diff_non" string="Base IVA mayor a 0"
						domain="[('document_type_id.code','=','07'),('base_withhold_iva','&gt;',0)]" 
						invisible="context.get('hide_07',0)"
						 />
			<!-- 	<newline />
					<filter name="fltr_filter_assigned" string="Solo Asignados"
										groups="pas_electronic_documents_received.group_documents_user_admin_usr,pas_electronic_documents_received.group_documents_user_config_usr"
						domain="[('assigned','=',2)]" 
						invisible="context.get('hide_no_07',0)"
						 />-->
									  
				</group>
				<field name="company_id"
					invisible="context.get('show_company',True)" />
				<field name="name" />
				<field name="document" />
				<field name="document_related" />
				<field name="date" />
				<field name="access_key" />
				<field name="document_message" />				
				<field name="taxes_codes" /> 
			</search>
		</field>
	</record>

	<record id="electronic_document_received_view_tree"
		model="ir.ui.view">
		<field name="name">electronic.document.received.tree</field>
		<field name="model">electronic.document.received</field>
		<field name="type">tree</field>
		<field eval="8" name="priority" />
		<field name="arch" type="xml">
			<tree string="Documentos Recibidos" create="false"
				delete="false" edit="false" 
				decoration-success="state=='updated' and (invoice_id or withhold_id )"
				decoration-info="state=='draft'" 
				decoration-danger="state=='error' or (state=='updated' and (not invoice_id and not withhold_id) )"
				decoration-bf="state=='error'"
				decoration-muted="state=='annulled'">
				 <header>
                <button name="update_received_documents_states" type="object" string="Actualizar" icon="fa-update"/>
            </header>

				<field name="company_id" />
				<field name="access_key" />
				<field name="document_type_id"
					attrs="{'invisible':[('state','=','draft')]}" />
					<field name="document"
					attrs="{'invisible':[('state','=','draft')]}" />
				<field name="date"
					attrs="{'invisible':[('state','=','draft')]}" />
				<field name="amount" sum="total"
					attrs="{'invisible':[('state','=','draft')]}" />   
				<field name="name" />
				<field name="document_related" optional="hide"
					attrs="{'invisible':[('state','=','draft')]}" />
				<field name="invoice_id"
/>
				<field name="withhold_id"
 />
				<field name="out_withhold_id" optional="hide" 
 />
				<field name="document_message" optional="hide" />
				<field name="state" optional="hide" />
				<field name="msg" optional="hide" />
				
				<field name="state_sri" widget="badge" decoration-success="state_sri=='authorized'" 
				decoration-warning="state_sri=='annulled' and not (invoice_id or withhold_id ) " decoration-danger="state_sri=='not_found' or (state_sri=='annulled' and (invoice_id or withhold_id ) )"  
				decoration-info="state_sri=='not_processed'" optional="show" 
				/>	
				
	<field name="confirmed_state" widget="badge" decoration-success="confirmed_state=='confirmed'" 
				decoration-danger="confirmed_state=='rejected'" 
				decoration-info="confirmed_state=='verified'" 
				decoration-warning="confirmed_state=='received'" optional="hide" 
				/>	
						
						
				<button name="action_recover" type="object"
					icon="fa-download" help="Recuperar Documento"
					attrs="{'invisible':[('state','in',('updated','annulled'))]}"
 />
				<button name="action_get_xml" type="object" icon="fa-code"
					help="Descargar XML"
					attrs="{'invisible':[('state','not in',('updated','annulled'))]}" />
				<button name="action_get_pdf" type="object" icon="fa-print"
					help="Descargar PDF"
					attrs="{'invisible':[('state','not in',('updated','annulled'))]}" />
			</tree>
		</field>
	</record>
	
