	<record id="electronic_document_received_view_form"
		model="ir.ui.view">
		<field name="name">electronic.document.received.form</field>
		<field name="model">electronic.document.received</field>
		<field name="type">form</field>
		<field eval="8" name="priority" />
		<field name="arch" type="xml">
			<form string="Documentos Recibidos" version="16.0"
				create="false" delete="false" edit="false">
				<header>

					<button name="action_recover" type="object"
						icon="fa-download" string="Recuperar"
						attrs="{'invisible':[('state','in',('updated','annulled'))]}"
/>

					<button
						name="%(electronic_document_received_workflow_wizard_view_2rejected_action)d"
						type="action" icon="fa-times" string="Rechazar"
						attrs="{'invisible':['|','|',('state','!=','updated'),('state_sri','!=','authorized'),('confirmed_state','!=','received')]}"

					/>
					<button
						name="%(electronic_document_received_workflow_wizard_view_2verified_action)d"
						type="action" icon="fa-check-circle" string="Verificar"
				attrs="{'invisible':['|','|',('state','!=','updated'),('state_sri','!=','authorized'),('confirmed_state','!=','received')]}"

					/>
					<button
						name="%(electronic_document_received_workflow_wizard_view_update_action)d"
						type="action" icon="fa-edit" string="Actualizar"
					attrs="{'invisible':['|','|','|','|','|',('withhold_id','!=',False),('invoice_id','!=',False),('state_sri','=','annulled'),('invoice_id','!=',False),('withhold_id','!=',False),('confirmed_state','!=','verified')]}"
					/>

						<button name="action_recover_state_sri" type="object"
					icon="fa-refresh" string="Act. Estado" attrs="{'invisible':['|','|',('state','not in',('updated','annulled')),('state_sri','=','annulled'),('enable_change_state_sri','!=',True)]}"  

					/>
					<button name="update_partner" type="object"
					icon="fa-users" string="Crear Clte." 
					attrs="{'invisible':['|','|','|','|','|','|','|',('withhold_id','!=',False),('invoice_id','!=',False),('state_sri','=','annulled'),('invoice_id','!=',False),('withhold_id','!=',False),('partner_id','!=',False),('document_type_code','!=','07'),('state','!=','updated')]}" 

					/> 	
					<button name="update_partner" type="object"
					icon="fa-users" string="Crear Prov." 
					attrs="{'invisible':['|','|','|','|','|','|','|',('withhold_id','!=',False),('invoice_id','!=',False),('state_sri','=','annulled'),('invoice_id','!=',False),('withhold_id','!=',False),('partner_id','!=',False),('document_type_code','=','07'),('state','!=','updated')]}" 

					/> 		
					<button name="create_process_document" type="object"
					icon="fa-files-o" string="Procesar Doc." 
					attrs="{'invisible':['|','|','|','|','|','|',('withhold_id','!=',False),('invoice_id','!=',False),('state_sri','=','annulled'),('invoice_id','!=',False),('withhold_id','!=',False),('confirmed_state','!=','verified'),('partner_id','=',False)]}"

					/> 					
					<button name="action_get_xml" type="object" icon="fa-code"
						string="XML"
						attrs="{'invisible':[('state','not in',('updated','annulled'))]}" />
					<button name="action_get_pdf" type="object" icon="fa-print"
						string="PDF"
						attrs="{'invisible':[('state','not in',('updated','annulled'))]}" />
					 <header>
               </header>
					<field name="state" widget="statusbar" />
				</header>
				 <sheet>
				<div class="oe_title">
					<h1>
						<field name="access_key" required="1" />
					</h1>
				</div>
				<newline />
				<group colspan="4" cols="2">
					<group>
						<field name="company_id" colspan="2"
							options="{'no_create':True,'no_open':True,'no_edit':True}"
							required="1"  />
						<field name="document_type_id"
							attrs="{'invisible':['|',('state','!=','updated'),('document_type_id','=',False)]}"
							required="0" colspan="2"
							options="{'no_create':True,'no_open':True}" />
							<field name="document_type_code" invisible="1"/>
						<field name="document"
							attrs="{'invisible':['|',('state','!=','updated'),('document','=',None)]}"
							required="0" colspan="2" />
						<field name="date"
							attrs="{'invisible':['|',('state','!=','updated'),('date','=',None)]}"
							invisible="0" colspan="2" />
						<field name="amount"
							attrs="{'invisible':['|',('state','!=','updated'),('document','=',None)]}"
							required="0" colspan="2" />
						<field name="document_related"
							attrs="{'invisible':['|','|','|',('state','=','draft'),('document_related','=',None),('document_related','=',False),('document_related','=','')]}" />
					</group>
					<group>
						<field name="name" required="1" colspan="2" />
						<field name="enable_change_state_sri" invisible="1" colspan="2" />
						
							
							<field name="state_sri" colspan="2" readonly="1"/>
							
							
						<field name="invoice_type"  colspan="2" readonly="1"
						attrs="{'invisible':[('document_type_code','=','07')]}" 
						 />
						 <field name="service_id"  colspan="2" readonly="1" 
						 	options="{'no_create':True,'no_edit':True,'no_open':True,}"
						attrs="{'invisible':['|',('document_type_code','=','07'),('invoice_type','!=','service')]}" 
						 />
						 
						 <field name="order_id" colspan="2" readonly="1"
							attrs="{'invisible':[('order_id','=',False)]}"
							/>
							
							<field name="process_order_id" colspan="2" readonly="1"
							attrs="{'invisible':[('process_order_id','=',False)]}"
							/>
							
							
							<field name="process_document_id" colspan="2" readonly="1"
							attrs="{'invisible':[('process_document_id','=',False)]}"
							invisible="1" 
							/>
							<field name="invoice_id" colspan="2" attrs="{'invisible':[('invoice_id','=',False)]}"  
 />
								<field name="withhold_id" colspan="2" attrs="{'invisible':[('withhold_id','=',False)]}"  
 />
								<field name="out_withhold_id" colspan="2" attrs="{'invisible':[('out_withhold_id','=',False)]}"  
 />
								
							
							
					</group>
				</group>
				<notebook>
