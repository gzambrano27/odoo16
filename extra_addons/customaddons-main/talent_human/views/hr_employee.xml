												<field name="name" string='Asunto'/>
												<field name="fecha_desde" string='Desde'/>
												<field name="fecha_hasta" string='Hasta'/>
												<field name="dias" string='Dias'/>
												<field name="valor" string='Acumulado'/>
										</tree>
										<form string="Historial de Decimo de Empleado">
												<group col="4">
														<field name="tipo"/>
														<field name="name" string='Asunto'/>
														<field name="fecha_desde" string='Desde'/>
														<field name="fecha_hasta" string='Hasta'/>
														<field name="dias" string='Dias'/>
														<field name="valor" string='Acumulado'/>
												</group>
										</form>
								</field>
							</page>

						</xpath>
						<xpath expr="//page[@name='hr_settings']//group[@name='identification_group']" position="after">
