														<field name="percent_disability" style="width: 93%" attrs="{'invisible':[('discapacidad','!=',True)],'required':[('discapacidad','=',True)]}" placeholder="Discapacidad de la Carga"/>
														<group string="Informacion de Cumpleaños" colspan="4" col="4">
