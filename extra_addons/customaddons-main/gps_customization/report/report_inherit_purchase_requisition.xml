<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="purchase_requisition_inherit" inherit_id="material_purchase_requisitions.purchase_requisition">
            <xpath expr="//table[hasclass('table','table-responsive')][4]" position="replace">
                <p style="page-break-before:always;"></p>
                <table class="table table-responsive">
                    <tr style="border: 2px solid black;">
                        <td><strong>Acción de Requisición</strong></td>
                        <td><strong>Código Anterior</strong></td>
                        <td><strong>Referencia Interna</strong></td>
                        <td><strong>Producto</strong></td>
<!--                        <td><strong>Description</strong></td>-->
                        <td><strong>Cantidad</strong></td>
                        <td><strong>Unidad de Medida</strong></td>
                        <td><strong>Proveedor</strong></td>
                    </tr>
                    <t t-foreach="doc.requisition_line_ids" t-as="line">
                        <tr style="border: 2px solid grey;">
                            <td><span t-field="line.requisition_type"/></td>
                            <td><span t-field="line.product_id.old_code"/></td>
                            <td><span t-field="line.product_id.default_code"/></td>
                            <td><span t-field="line.product_id.name"/></td>
                            <!--                            <td><span t-esc="line.description"/></td>-->
                            <td class="text-right"><span t-esc="line.qty"/></td>
                            <td class="text-right"><span t-esc="line.uom.name"/></td>
                            <td><t t-foreach="line.partner_id" t-as="vendore"><span t-field="vendore.name"/>,</t></td>
                        </tr>
                    </t>
                </table>
            </xpath>
        </template>

    </data>
</odoo>