<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
	
		<record id="zk_machine_wizard_form" model="ir.ui.view">
			<field name="name">zk.machine.wizard.form</field>
			<field name="model">zk.machine.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Asistente de BiometrÃ­co" version="16.0">
					<group colspan="4" class="oe_view_title" col="2">

							<group>
							<field name="type" readonly="1" force_save="1" colspan="2" invisible="1" />

								<field name="biometric_id" readonly="1" required="1" colspan="2"
						options="{'no_create':True,'no_edit':True,'no_open':True,}"
							   force_save="1"
						/>
								<field name="lock_biometric" invisible="1"/>
						<field name="employee_id"  attrs="{'readonly': [('type', 'in', ['update_user', 'delete_user'])],'required': [('type', 'not in', ['delete_user'])]}" colspan="2"
						options="{'no_create':True,'no_edit':True,'no_open':True,}"
							   force_save="1"
							   domain="[('id','not in',register_employee_ids)]"
						/>
									<field name="name"  readonly="1" colspan="2"

								   force_save="1"
						/>
						<field name="device_id_num"  required="1"
							   attrs="{'readonly': ['|', ('type', 'in', ['update_user', 'delete_user']), ('lock_biometric', '=', True)]}"
							   colspan="2" force_save="1"
						/>

						<field name="type_update"  colspan="2"
							   widget="radio" attrs="{
           'invisible': [('type', '!=', 'update_user')],
           'required': [('type', '=', 'update_user')]
       }"/>
						/>

							</group>
						<group>






															<field name="password" colspan="2" widget="password"
									   attrs="{
           'invisible': ['|', ('type', '!=', 'update_user'), ('type_update', '!=', 'only_password')],
           'required': ['&amp;', ('type', '=', 'update_user'), ('type_update', '=', 'only_password')]
       }"
						/>


								<field name="hand" colspan="2" widget="radio"
									attrs="{
           'invisible': ['|', ('type', '!=', 'update_user'), ('type_update', '!=', 'only_fingerprint')],
           'required': ['&amp;', ('type', '=', 'update_user'), ('type_update', '=', 'only_fingerprint')]
       }"
						/>
<field name="right_finger" colspan="2" widget="radio" string="Dedo"
attrs="{
           'invisible': ['|', '|', ('hand', '!=', 'right'), ('type', '!=', 'update_user'), ('type_update', '!=', 'only_fingerprint')],
           'required': ['&amp;', '&amp;', ('hand', '=', 'right'), ('type', '=', 'update_user'), ('type_update', '=', 'only_fingerprint')]
       }"
/>
								<field name="left_finger" colspan="2" widget="radio" string="Dedo"
								attrs="{
           'invisible': ['|', '|', ('hand', '!=', 'left'), ('type', '!=', 'update_user'), ('type_update', '!=', 'only_fingerprint')],
           'required': ['&amp;', '&amp;', ('hand', '=', 'left'), ('type', '=', 'update_user'), ('type_update', '=', 'only_fingerprint')]
       }"
						/>
<field name="register_employee_ids" widget="many2many_tags" invisible="1" />

						</group>

					</group>
					<newline />
					<footer colspan="4">
						<button colspan="1" name="process" string="Procesar" type="object" icon="fa-cogs" />
						<button colspan="1"  special="cancel" string="Salir" type="object" icon="fa-times" />
					</footer>
				</form>

			</field>
		</record>
	
		
	</data>
</odoo>