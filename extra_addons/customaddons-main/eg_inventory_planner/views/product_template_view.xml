<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_seasonal_template_form_view" model="ir.ui.view">
        <field name="name">product.seasonal.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="priority">5</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="sub_categ_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>

    <record id="product_seasonal_search_form_view" model="ir.ui.view">
        <field name="name">product.seasonal.product.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="sub_categ_ids" filter_domain="[('sub_categ_ids', 'child_of', raw_value)]"/>
            </field>
        </field>
    </record>

</odoo>
