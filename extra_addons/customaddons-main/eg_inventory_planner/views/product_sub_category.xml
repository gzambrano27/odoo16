<odoo>
    <record id="product_sub_category_search_view" model="ir.ui.view">
        <field name="name">product.sub.category.search</field>
        <field name="model">product.sub.category</field>
        <field name="arch" type="xml">
            <search string="Product Sub Categories">
                <field name="name" string="Product sSub Categories"/>
                <field name="parent_id"/>
            </search>
        </field>
    </record>

    <record id="product_sub_category_form_view" model="ir.ui.view">
        <field name="name">product.sub.category.form</field>
        <field name="model">product.sub.category</field>
        <field name="arch" type="xml">
            <form class="oe_form_configuration">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                                name="%(product.product_template_action_all)d"
                                icon="fa-th-list"
                                type="action"
                                context="{'search_default_sub_categ_ids': active_id, 'default_sub_categ_ids': active_id}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="product_count"/>
                                </span>
                                <span class="o_stat_text">Products</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" string="Category name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g.Lamps"/>
                        </h1>
                    </div>

                    <group name="first" col="2">
                        <field name="parent_id" class="oe_inline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_sub_category_list_view" model="ir.ui.view">
        <field name="name">product.sub.category.list</field>
        <field name="model">product.sub.category</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Product Sub Categories">
                <field name="display_name" string="Product sub Category"/>
            </tree>
        </field>
    </record>

    <record id="product_sub_category_action_form" model="ir.actions.act_window">
        <field name="name">Product Sub Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.sub.category</field>
        <field name="search_view_id" ref="product_sub_category_search_view"/>
        <field name="view_id" ref="product_sub_category_list_view"/>
    </record>

    <menuitem
            action="product_sub_category_action_form" id="menu_product_sub_category_config_stock"
            parent="stock.menu_product_in_config_stock" sequence="2"/>

</odoo>