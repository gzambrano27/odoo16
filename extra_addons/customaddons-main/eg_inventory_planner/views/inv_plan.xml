<odoo>
    <record model="ir.ui.view" id="inv_plan_tree_view">
        <field name="name">inv.plan.tree.view</field>
        <field name="model">inv.plan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="create_date"/>
                <field name="create_uid"/>
                <field name="po_ids"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="inv_plan_from_view">
        <field name="name">inv.plan.from.view</field>
        <field name="model">inv.plan</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="generate_planner_line" type="object" string="Generate Planner"
                            attrs="{'invisible':[('state','!=','draft')]}" class="oe_highlight"/>
                    <button name="action_request" type="object" string="Request"
                            attrs="{'invisible':[('state','!=','report_generated')]}" class="oe_highlight"/>
                    <button name="action_approved" type="object" string="Approve"
                            attrs="{'invisible':[('state','!=','request')]}"
                            groups="eg_inventory_planner.group_planner_manager"
                            class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel"
                            attrs="{'invisible':[('state','=','cancel')]}"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,report_generated,request,approved,confirm,cancel"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                                name="open_report_lines"
                                icon="fa-th-list"
                                type="object">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Data</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="extra_stock_days" attrs="{'readonly':[('state' ,'!=', 'draft')]}"/>
                            <field name="lead_time" attrs="{'readonly':[('state' ,'!=', 'draft')]}"/>
                            <field name="growth_multiplier" attrs="{'readonly':[('state' ,'!=', 'draft')]}"/>
                            <field name="vendor_selection"/>
                            <field name="vendor_ids"
                                   attrs="{'invisible':[('vendor_selection', 'in' ,['cheapest_vendor' ,'quickest_vendor'])]}"
                                   widget="many2many_tags" options='{"no_create": 1, "no_create_edit": 1}'/>
                            <field name="velocity_manual" attrs="{'readonly':[('state' ,'!=', 'draft')]}"/>
                            <field name="from_date"
                                   attrs="{'invisible': [('velocity_manual', '!=', True)],'readonly':[('state' ,'!=', 'draft')]}"/>
                            <field name="to_date"
                                   attrs="{'invisible': [('velocity_manual', '!=', True)],'readonly':[('state' ,'!=', 'draft')]}"/>
                            <field name="days"
                                   attrs="{'invisible': [('velocity_manual', '!=', True)],'readonly':[('state' ,'!=', 'draft')]}"
                                   readonly="1" force_save="1"/>
                        </group>
                        <group>
                            <field name="categ_ids" widget="many2many_tags"
                                   attrs="{'readonly':[('state' ,'!=', 'draft')]}"
                                   options='{"no_create": 1, "no_create_edit": 1}'/>
                            <field name="sub_categ_ids" widget="many2many_tags"
                                   attrs="{'readonly':[('state' ,'!=', 'draft')]}"
                                   options='{"no_create": 1, "no_create_edit": 1}'/>
                            <field name="warehouse_ids" widget="many2many_tags"
                                   attrs="{'readonly':[('state' ,'!=', 'draft')]}"
                                   options='{"no_create": 1, "no_create_edit": 1}'/>
                            <field name="create_uid"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Purchase Order">
                            <field name="po_ids"/>
                        </page>
                        <page string="Sale Order History">
                            <field name="product_sale_history_ids">
                                <tree editable="bottom">
                                    <field name="inventory_plan_id" invisible="1"/>
                                    <field name="from_date"/>
                                    <field name="to_date"/>
                                    <field name="duration_in_day"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="total_sale_order"/>
                                    <field name="average_daily_sale"/>
                                    <field name="maximum_daily_sale_qty"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Purchase Order History">
                            <field name="product_purchase_history_ids">
                                <tree editable="bottom">
                                    <field name="inventory_plan_id" invisible="1"/>
                                    <field name="from_date"/>
                                    <field name="to_date"/>
                                    <field name="duration_in_day"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="total_purchase_order"/>
                                    <field name="average_daily_purchase"/>
                                    <field name="maximum_daily_purchase_qty"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_inv_plan">
        <field name="name">Inventory Plan</field>
        <field name="res_model">inv.plan</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Inventory Plans" id="inv_plan" parent="stock.menu_stock_root"
              groups="group_planner_user"/>
    <menuitem name="Inventory Plans" action="action_inv_plan"
              id="inv_planners" parent="eg_inventory_planner.inv_plan"
              groups="group_planner_user"/>

    <record id="action_so_history_report" model="ir.actions.report">
        <field name="name">Sale Order History</field>
        <field name="model">inv.plan</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">eg_inventory_planner.sale_history_report_template</field>
        <field name="report_file">eg_inventory_planner.sale_history_report_template</field>
        <field name="binding_model_id" ref="model_inv_plan"/>
        <field name="binding_type">report</field>
    </record>
</odoo>