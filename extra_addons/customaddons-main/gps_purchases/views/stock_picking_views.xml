<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_picking_form_view" model="ir.ui.view">
            <field name="name">stock.picking.form.view_inh</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='owner_id']" position="after">
                    <field name="purchase_order_id" string="Orden de Compra" attrs="{'readonly': ['|', '|', ('show_operations', '=', False), ('state', '=', 'cancel'), '&amp;', ('state', '=', 'done'), ('is_locked', '=', True)], 'invisible': [('show_reserved', '=', False)]}" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
