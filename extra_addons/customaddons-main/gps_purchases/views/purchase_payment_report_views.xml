    <menuitem id="menu_purchase_payment_report"
              name="Compras - Anticipos/Pagadas/Sobrepagos"
              parent="purchase.purchase_report_main"
              sequence="99"
              groups="purchase.group_purchase_manager,purchase.group_purchase_user"
              action="action_purchase_payment_report"/>
</odoo>
