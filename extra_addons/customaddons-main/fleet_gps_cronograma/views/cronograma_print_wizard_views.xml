<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_cronograma_print_wizard_form" model="ir.ui.view">
    <field name="name">cronograma.print.wizard.form</field>
    <field name="model">cronograma.print.wizard</field>
    <field name="arch" type="xml">
      <form string="Fechas a Imprimir">
        <group>
          <field name="date_start"/>
          <field name="date_end"/>
        </group>
        <footer>
          <button string="Cancelar" special="cancel" class="btn-secondary"/>
          <button string="Imprimir" name="action_print"
                  type="object" class="btn-primary"/>
        </footer>
      </form>
    </field>
  </record>

  <!-- acción que abre el asistente desde el botón del árbol -->
  <record id="action_cronograma_print_wizard" model="ir.actions.act_window">
    <field name="name">Imprimir Cronograma</field>
    <field name="res_model">cronograma.print.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_cronograma_print_wizard_form"/>
    <field name="target">new</field>
  </record>
</odoo>
