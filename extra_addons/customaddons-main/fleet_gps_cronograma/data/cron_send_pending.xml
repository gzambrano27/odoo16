<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="ir_cron_send_pending_finalization" model="ir.cron">
    <!-- Nombre visible en UI -->
    <field name="name">Enviar resumen de finalizaciones pendientes</field>
    <!-- Modelo fleet.cronograma -->
    <field name="model_id" ref="fleet_gps_cronograma.model_fleet_cronograma"/>
    <!-- Ejecución por código -->
    <field name="state">code</field>
    <field name="code">model.send_pending_finalization_email()</field>
    <!-- Frecuencia diaria -->
    <field name="interval_number">1</field>
    <field name="interval_type">days</field>
    <!-- Sin límite de ejecuciones -->
    <field name="numbercall" eval="-1"/>
    <!-- Próxima ejecución: mañana a las 03:00 servidor -->
    <field name="nextcall">2025-07-08 03:00:00</field>
    <!-- Activa la tarea -->
    <field name="active" eval="True"/>
    <!-- Opcional: usuario que la ejecuta -->
    <field name="user_id" ref="base.user_root"/>
  </record>
</odoo>
