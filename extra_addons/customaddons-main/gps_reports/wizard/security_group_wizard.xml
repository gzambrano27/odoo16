<odoo>
    <record id="view_security_group_wizard_form" model="ir.ui.view">
        <field name="name">security.group.wizard.form</field>
        <field name="model">security.group.wizard</field>
        <field name="arch" type="xml">
            <form string="Exportar Grupos y Menús">
                <group>
                    <field name="menu_ids" widget="many2many_tags"
                    options="{'no_create':True,'no_edit':True,'no_open':True}"
                    />
                </group>                <footer>
                    <button name="process" type="object" string="Exportar" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_security_group_wizard" model="ir.actions.act_window">
        <field name="name">Exportar Grupos y Menús</field>
        <field name="res_model">security.group.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


</odoo>