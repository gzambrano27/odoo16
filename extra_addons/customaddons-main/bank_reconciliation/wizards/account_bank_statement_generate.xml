<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="view_account_bank_statement_generate_form" model="ir.ui.view">
		<field name="name">account.bank.statement.generate.form</field>
		<field name="model">account.bank.statement.generate</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
                    <div class="oe_title">
					    <h1>
						    <field name="statement_id" readonly="1" options="{'no_open':true}" />
					    </h1>
                    </div>
                    <group>
					    <field name="journal_id" readnoly="1" options="{'no_open':true}" />
                    </group>
                    <notebook>
                        <page string="Bank Entries">
                            <field name="move_domain" invisible="1" />
						    <field name="move_line_ids" colspan="2" nolabel="1"
                                   domain="move_domain"
                                   context="{'tree_view_ref' : 'bank_reconciliation.view_move_line_tree'}" >
							    <tree>
								    <field name="move_id" />
								    <field name="date" />
								    <field name="name" />
								    <field name="partner_id" />
								    <field name="amount_residual" />
								    <field name="currency_id" invisible="1" />
							    </tree>
						    </field>
					    </page>
					    <!-- <page string="Payments"> -->
						<!--     <field name="payment_ids" colspan="2" context="{'tree_view_ref' : 'bank_reconciliation.view_account_payment_tree_statement_generate'}" nolabel="1" -->
                        <!--            domain="[('journal_id','=', journal_id), ('is_matched','=', False), ('state','=', 'posted'), ('match_statement_line_ids','=', False)]" /> -->
					    <!-- </page> -->
                    </notebook>
					<footer>
						<button name="process" type="object" class="oe_highlight" string="Create Transactions" />
						<button special="cancel" string="Cancel" class="btn-secondary" />
					</footer>
				</sheet>
			</form>
		</field>
	</record>

</odoo>
