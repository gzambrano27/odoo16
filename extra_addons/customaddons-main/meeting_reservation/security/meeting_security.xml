<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="module_category_meeting_reservation" model="ir.module.category">
            <field name="name">Reservas de Reuniones</field>
        </record>
        <record id="group_meeting_user" model="res.groups">
            <field name="name">Usuario</field>
            <field name="category_id" ref="module_category_meeting_reservation"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_meeting_admin" model="res.groups">
            <field name="name">Administrador</field>
            <field name="category_id" ref="module_category_meeting_reservation"/>
            <field name="implied_ids" eval="[(4, ref('group_meeting_user'))]"/>
        </record>
    </data>

    <data>
        <record id="rule_meeting_user_permissions" model="ir.rule">
            <field name="name">Usuario: Ver p√∫blicos, editar/cancelar propios</field>
            <field name="model_id" ref="model_meeting_meeting"/>
            <field name="groups" eval="[(4, ref('group_meeting_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">['|', ('organizer_id.user_id', '=', user.id), ('state', 'in', ['reserved', 'cancelled'])]</field>
        </record>
        <record id="rule_meeting_admin_all_access" model="ir.rule">
            <field name="name">Administrador de Reuniones: Acceso total</field>
            <field name="model_id" ref="model_meeting_meeting"/>
            <field name="groups" eval="[(4, ref('group_meeting_admin'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>