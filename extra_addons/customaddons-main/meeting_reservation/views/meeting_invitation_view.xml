        <group>
          <field name="meeting_id"/>
          <field name="employee_id"/>
          <field name="department"/>
          <field name="is_my_invitation" invisible="1"/>
          <field name="state" attrs="{'readonly':[('is_my_invitation','=',False)]}"/>
          <button name="action_send_invitation" string="Enviar" type="object"
                class="btn-secondary"/><button name="action_send_invitation" string="Enviar" type="object"
                class="btn-secondary"/>
        </group>
        <footer>
          <button string="Cerrar" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
