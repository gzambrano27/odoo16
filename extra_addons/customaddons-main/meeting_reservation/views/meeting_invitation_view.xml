<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Vista tree de invitaciones -->
  <record id="view_meeting_invitation_tree" model="ir.ui.view">
    <field name="name">meeting.invitation.tree</field>
    <field name="model">meeting.invitation</field>
    <field name="arch" type="xml">
      <tree editable="bottom">
        <field name="employee_id"/>
        <field name="department"/>
        <field name="state" attrs="{'readonly':[('is_my_invitation','=',False)]}"/>
        <field name="is_my_invitation" invisible="1"/>
        <button name="action_send_invitation" string="Enviar" type="object"
                class="btn-secondary"/>
      </tree>
    </field>
  </record>

  <!-- Vista formulario de invitaciones -->
  <record id="view_meeting_invitation_form" model="ir.ui.view">
    <field name="name">meeting.invitation.form</field>
    <field name="model">meeting.invitation</field>
    <field name="arch" type="xml">
