<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista tipo tree -->
    <record id="view_accounts_analytic_view_tree" model="ir.ui.view">
        <field name="name">accounts.analytic.view.tree</field>
        <field name="model">accounts.analytic.view</field>
        <field name="arch" type="xml">
            <tree string="Cuentas Analiticas" create="false" edit="false" delete="false">
                <field name="company_id"/>
                <field name="partner_id"/>
                <field name="nombre_proyecto"/>
                <field name="tipo_proyecto"/>
                <field name="ubicaciones"/>
                <field name="zona"/>
                <field name="estado"/>
                <field name="plan"/>
                <field name="codigo"/>
            </tree>
        </field>
    </record>

    <!-- AcciÃ³n -->
    <record id="action_accounts_analytic" model="ir.actions.act_window">
        <field name="name">Cuentas Analiticas</field>
        <field name="res_model">accounts.analytic.view</field>
        <field name="view_mode">tree</field>
    </record>


</odoo>
