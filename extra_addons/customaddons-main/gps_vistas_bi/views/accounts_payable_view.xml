<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista tipo tree -->
    <record id="view_accounts_payable_tree" model="ir.ui.view">
        <field name="name">accounts.payable.view.tree</field>
        <field name="model">accounts.payable.view</field>
        <field name="arch" type="xml">
            <tree string="Cuentas por Pagar" create="false" edit="false" delete="false">
                <field name="company_id"/>
                <field name="partner_id"/>
                <field name="move_name"/>
                <field name="move_ref"/>
                <field name="move_date"/>
                <field name="date_maturity"/>
                <field name="account_code"/>
                <field name="account_name"/>
                <field name="debit"/>
                <field name="credit"/>
                <field name="amount_residual"/>
                <field name="currency_id"/>
            </tree>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_accounts_payable" model="ir.actions.act_window">
        <field name="name">Cuentas por Pagar</field>
        <field name="res_model">accounts.payable.view</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- Menú (opcional, en Contabilidad/Informes) -->

</odoo>
