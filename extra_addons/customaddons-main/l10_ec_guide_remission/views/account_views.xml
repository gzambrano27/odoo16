<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_move_form_inherit_guide_remission" model="ir.ui.view">
        <field name="name">account.move.form.inherit.guide_remission</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button"
                        name="action_view_guide_remission"
                        type="object"
                        icon="fa-pencil-square-o"
                        attrs="{'invisible': ['|', ('guide_remission_order_count', '=', 0), ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"
                >
                    <field string="Guide Remission" name="guide_remission_order_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
