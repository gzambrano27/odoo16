<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_request_acceptance_form" model="ir.ui.view">
        <field name="name">request.acceptance.form</field>
        <field name="model">request.acceptance</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="button_accept"
                        type="object"
                        states="draft"
                        string="Generar Requisicion"
                        class="oe_highlight"
                        context="{'manual_date_accept': True}"
                    />
                    
                    <button
                        name="button_draft"
                        type="object"
                        states="accept,cancel"
                        string="Set to draft"
                    />
                    <button
                        name="button_cancel"
                        type="object"
                        states="draft,accept"
                        string="Cancel"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,accept"
                        attrs="{'readonly': True}"
                    />
                    
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_requisiciones"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-invoice"
                                attrs="{'invisible': [('requisicion_count', '=', 0)]}">
                            <field name="requisicion_count" widget="statinfo" string="Requisiciones"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name_rs" attrs="{'readonly': True}" class="oe_inline"/>
                            <span class="oe_inline"> - </span>
                            <field name="name" attrs="{'readonly': True}" class="oe_inline" invisible='1'/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" invisible='1'/>
                            <field name="responsible_id" />
                            <field
                                name="currency_id"
                                groups="base.group_multi_currency"
                                options="{'no_create': True}"
                            />
                            <field name="picking_type_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="date_due" />
                            <field name="date_receive" invisible='1'/>
                            <field
                                name="date_accept"
                                attrs="{'invisible': [('state', '=', 'draft')]}"
                            />
                            <field name="request_type" />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                                options="{'no_create': True}"
                            />
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field
                                name="pr_line_ids"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            >
                                <tree editable="bottom">
                                    <field
                                        name="purchase_line_id"
                                        optional="hide"
                                        readonly="1"
                                        force_save="1"
                                    />
                                    <field
                                        name="product_id"
                                        readonly="0"
                                        force_save="1"
                                    />
                                    <field name="name" />
                                    <field name="product_qty" />
                                    <field name="product_uom" groups="uom.group_uom" />
                                    <field name="tipo_costo" />
                                    <field name="rubro" />
                                    <field name="costo_uni_apu" optional="hide" groups="analytic.group_analytic_accounting"/>
                                    <field
                                        name="analytic_distribution"
                                        widget="analytic_distribution"
                                        groups="analytic.group_analytic_accounting"
                                        options="{'product_field': 'product_id'}"
                                    />
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="purchase_line_id" />
                                                <field name="product_id" />
                                                <label for="product_qty" />
                                                <div>
                                                    <field
                                                        name="product_qty"
                                                        class="oe_inline"
                                                    />
                                                    <span
                                                        class="oe_inline"
                                                    >&#160;</span>
                                                    <field
                                                        name="product_uom"
                                                        class="oe_inline"
                                                    />
                                                </div>
                                                <field name="price_unit" />
                                                <field name="discount" />
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <field
                        name="notes"
                        class="oe_inline"
                        placeholder="Define your terms and conditions ..."
                    />
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="view_request_acceptance_tree" model="ir.ui.view">
        <field name="name">request.acceptance.tree</field>
        <field name="model">request.acceptance</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state=='cancel'">
                <field name="name_rs" string="Recepcion" />
                <field name="name" string="Reference" />
                <field name="date_due" />
                <field name="date_receive" />
                <field name="date_accept" />
                <field name="partner_id" invisible='1'/>
                <field name="responsible_id" />
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                    options="{'no_create': True}"
                />
                <field
                    name="currency_id"
                    groups="base.group_multi_currency"
                    options="{'no_create': True}"
                />
                <field name="state" />
            </tree>
        </field>
    </record>
    <record id="view_request_acceptance_search" model="ir.ui.view">
        <field name="name">request.acceptance.search</field>
        <field name="model">request.acceptance</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Reference" />
                <field name="partner_id" operator="child_of" invisible='1'/>
                <field name="responsible_id" operator="child_of" />
                <field name="product_id" />
                <field name="create_uid" />
                <field name="user_id" />
                <filter
                    name="my_pr"
                    string="My Request Acceptance"
                    domain="[('user_id','=', uid)]"
                />
                <separator />
                <filter
                    string="Draft"
                    name="draft"
                    domain="[('state', '=', 'draft')]"
                />
                <filter
                    string="Accepted"
                    name="accepted"
                    domain="[('state', '=', 'accept')]"
                />
                <group expand="0" string="Group By">
                    <filter
                        string="Solicitado Por"
                        name="accept_by"
                        domain="[]"
                        context="{'group_by':'responsible_id'}"
                    />
                    
                    <filter
                        string="Due Date"
                        name="due_date"
                        domain="[]"
                        context="{'group_by':'date_due'}"
                    />
                    <filter
                        string="Receive Date"
                        name="receive_date"
                        domain="[]"
                        context="{'group_by':'date_receive'}"
                    />
                    <filter
                        string="Accepte Date"
                        name="accept_date"
                        domain="[]"
                        context="{'group_by':'date_accept'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="view_request_acceptance_line_pivot" model="ir.ui.view">
        <field name="name">request.acceptance.line.pivot</field>
        <field name="model">request.acceptance.line</field>
        <field name="arch" type="xml">
            <pivot string="Resumen de Requisicion por Macro Req. APU">
                <field name="product_id" type="row"/>
                <field name="date_accept" type="col"/>
                <!-- <field name="qty_accepted" type="measure"/> -->
            </pivot>
        </field>
    </record>
    <record id="action_request_acceptance" model="ir.actions.act_window">
        <field name="name">Request Acceptance</field>
        <field name="res_model">request.acceptance</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="search_view_id" ref="view_request_acceptance_search" />
        <field name="view_id" ref="view_request_acceptance_tree" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new request acceptance</p>
        </field>
    </record>
    <menuitem
        id="menu_request_acceptance"
        name="Request Acceptance"
        action="action_request_acceptance"
        parent="macro_purchase_request.menu_macro_purchase_request"
    />
</odoo>
