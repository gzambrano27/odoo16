<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- account.payment.customer tree inherit view -->
    <record id="view_account_payment_tree_inherit" model="ir.ui.view">
        <field name="name">account.payment.view.tree.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="bank_reference" />
            </xpath>
        </field>
    </record>

    <!-- account.payment form inherit view -->
    <record id="view_account_payment_form_inherit" model="ir.ui.view">
        <field name="name">account.payment.view.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_bank_id']" position="before">
                <field name="bank_reference" />
            </xpath>
        </field>
    </record>

    <!-- account.payment search inherit view -->
    <record id="view_account_payment_search_inherit" model="ir.ui.view">
        <field name="name">account.payment.view.search.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="bank_reference" />
            </xpath>
        </field>
    </record>

    <!-- account.payment.register form inherit view -->
    <record id="view_account_payment_register_form_inherit" model="ir.ui.view">
        <field name="name">account.payment.register.view.form.inherit</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='communication']" position="after">
                <field name="bank_reference" />
            </xpath>
        </field>
    </record>

    <!-- account.move.line tree inherit view -->
    <record id="view_account_move_line_tree_inherit" model="ir.ui.view">
        <field name="name">account.move.line.view.tree.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="bank_reference"/>
            </xpath>
        </field>
    </record>

    <!-- account.move.line search inherit view -->
    <record id="view_account_move_line_search_inherit" model="ir.ui.view">
        <field name="name">account.move.line.view.search.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="bank_reference"/>
            </xpath>
        </field>
    </record>

    <!-- account.move.line form inherit view -->
    <record id="view_account_move_line_form_inherit" model="ir.ui.view">
        <field name="name">account.move.line.view.form.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="bank_reference" readonly="1" />
            </xpath>
        </field>
    </record>

</odoo>
