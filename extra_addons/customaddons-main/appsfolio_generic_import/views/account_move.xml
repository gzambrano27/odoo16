<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_inherit_view" model="ir.ui.view">
        <field name="name">view.move.form.inherit.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <header>
                <button
                        name="%(action_import_invoice_wizard_view)d"
                        type="action"
                        class="btn-primary"
                        string="Import Invoice Lines"/>
            </header>
            <button name="action_post" position="after">
                <button
                        name="%(action_account_move_line_wizard_view)d"
                        type="action"
                        class="oe_highlight"
                        string="Import Journal Items"
                        attrs="{'invisible': [('state', '!=', 'draft')]}"/>
            </button>
        </field>
    </record>
    <record id="action_view_move_form_inherit_view" model="ir.actions.act_window">
        <field name="name">Invoice/Bills</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="domain">[('import_data', '=', True), ('move_type', 'in', ['in_invoice', 'out_invoice', 'out_refund',
            'in_refund'])]
        </field>
        <field name="view_id" ref="account.view_invoice_tree"/>
        <field name="search_view_id" ref="account.view_account_invoice_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Invoice / Bills
            </p>
        </field>
    </record>
</odoo>
