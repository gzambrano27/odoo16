<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="view_order_form_inherit_view" model="ir.ui.view">
    	<field name="name">view.order.form.inherit.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
        	<header>
				<button 
					name="%(action_sale_order_line_wizard_view)d"
					type="action"
					class="btn-primary"
					string="Import Sale Order Lines"/>
			</header>
            <field name='pricelist_id' position="after">
                <field name="custom_sequence" invisible="1"/>
                <field name="system_sequence" invisible="1"/>
                <field name="sale_name" invisible="1"/>
            </field>
        </field>
    </record>
    <record id="action_view_order_form_inherit_view" model="ir.actions.act_window">
    	<field name="name">Sale Order</field>
    	<field name="res_model">sale.order</field>
    	<field name="view_mode">tree,kanban,form</field>
		<field name="context">{}</field>
		<field name="domain">[('import_data', '=', True)]</field>
		<field name="view_id" ref="sale.view_order_tree"/>
		<field name="search_view_id" ref="sale.sale_order_view_search_inherit_sale"/>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Create a Sale Order
			</p>
		</field>
    </record>
</odoo>
