<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_inherit_purchase_order_form_view" model="ir.ui.view">
        <field name="name">view.inherit.purchase.order.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <!-- <header>
                <button 
                    name="%(action_po_line_wizard_view)d"
                    type="action"
                    class="btn-primary"
                    string="Import Purchase Order Lines"/>
            </header> -->
            <field name='date_order' position="after">
                <field name="custom_sequence" invisible="1"/>
                <field name="system_sequence" invisible="1"/>
                <field name="purchase_name" invisible="1"/>
            </field>
        </field>
    </record>
    <record id="action_view_inherit_purchase_order_form_view" model="ir.actions.act_window">
        <field name="name">Purchase Order</field>
        <field name="res_model">purchase.order</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="domain">[('import_data', '=', True)]</field>
        <field name="view_id" ref="purchase.purchase_order_tree"/>
        <field name="search_view_id" ref="purchase.view_purchase_order_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Purchase order
            </p>
        </field>
    </record>
</odoo>
