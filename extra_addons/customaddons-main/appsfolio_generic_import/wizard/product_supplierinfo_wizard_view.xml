<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_supplierinfo_wizard_view" model="ir.ui.view">
        <field name="name">product.supplierinfo.wizard.view</field>
        <field name="model">product.supplierinfo.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Supplierinfo">
                <group>
                    <field name="file" filename="name"/>
                </group>
                <group>
                    <field name="create_link_option" widget="radio"/>
                </group>
                <footer>
                    <button 
                        name="import_product_supplier_file" 
                        type="object"
                        string="Import" 
                    />
                    <div style="margin-left: auto;margin-right: 0;">
                        <strong>
                            Download Sample: 
                        </strong>
                        <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample CSV File/import_supplier.csv" class="btn-primary" style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download"/>
                            CSV file
                        </a>
                        <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample XLS File/import_suppliers.xls" class="btn-primary" style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download"/>
                            Excel file
                        </a>
                    </div>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_product_supplierinfo_wizard_view" model="ir.actions.act_window">
        <field name="name">Product Supplier Information Wizard</field>
        <field name="res_model">product.supplierinfo.wizard</field>            
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem
        id= "menu_import"
        parent= "sale.menu_sale_config"
        name= "Import"
    />
    <menuitem
        id="product_supplierinfo_wizard_menu"
        action="action_product_supplierinfo_wizard_view"
        parent="menu_import"
    />
</odoo>
