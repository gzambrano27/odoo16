<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="purchase_order_wizard_view" model="ir.ui.view">
        <field name="name">purchase.order.wizard.view</field>
        <field name="model">purchase.order.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Purchase">
                <group>
                    <group>
                        <field name="file_import_type" widget='radio'/>
                        <field name="file" filename="name"/>
                    </group>
                    <group>
                        <field name="stage" widget='radio'/>
                    </group>
                </group>
                <group>
                    <field name="sequence_opt"/>
                </group>
                <group>
                    <field name="option_import_file_by" widget='radio'/>
                </group>
                <footer>
                    <button 
                        name="import_purchase_order_file" 
                        type="object"
                        class="oe_highlight" 
                        string="Import" 
                    />
                    <div style="margin-left: auto;margin-right: 0;">
                        <strong>
                            Download Sample: 
                        </strong>
                        <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample CSV File/purchase_order.csv" class="btn-primary" style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download"/>
                            CSV file
                        </a>
                        <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample XLS File/purchase_order.xls" class="btn-primary" style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download"/>
                            Excel file
                        </a>
                    </div>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_purchase_order_wizard_view" model="ir.actions.act_window">
        <field name="name">Purchase Order Wizard</field>
        <field name="res_model">purchase.order.wizard</field>        
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem
        id="purchase_order_wizard_menu"
        action="action_purchase_order_wizard_view"
        parent="purchase.menu_procurement_management"
        sequence="7"
    />
</odoo>
