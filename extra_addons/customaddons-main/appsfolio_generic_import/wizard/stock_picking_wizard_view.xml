<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="stock_picking_wizard_view" model="ir.ui.view">
        <field name="name">stock.picking.wizard.view</field>
        <field name="model">stock.picking.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Picking">
                <group>
                    <field name="file_import_type" widget='radio'/>
                </group>
                <group>
                    <field name="file" filename="name"/>
                </group>
                <group>
                    <group>
                        <field name="picking_type_id"/>
                    </group>
                    <group>
                        <field name="option_import_file_by" widget='radio'/>
                    </group>
                    <group>
                        <field name="location_id" groups="stock.group_stock_multi_locations"/>
                        <field name="location_dest_id" groups="stock.group_stock_multi_locations"/>
                        <field name="picking_type_code" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button
                            name="import_picking"
                            type="object"
                            class="oe_highlight"
                            string="Import"/>
                    <div style="margin-left: auto;margin-right: 0;">
                        <strong>
                            Download Sample:
                        </strong>
                        <a role="button"
                           href="/appsfolio_generic_import/static/Sample File/Sample CSV File/import_picking.csv"
                           class="btn-primary"
                           style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download"/>
                            CSV file
                        </a>
                        <a role="button"
                           href="/appsfolio_generic_import/static/Sample File/Sample XLS File/import_picking.xlsx"
                           class="btn-primary"
                           style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download"/>
                            Excel file
                        </a>
                    </div>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_picking_wizard_view" model="ir.actions.act_window">
        <field name="name">Stock Picking Wizard</field>
        <field name="res_model">stock.picking.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
            id="stock_picking_wizard_menu"
            action="action_stock_picking_wizard_view"
            parent="stock.menu_stock_warehouse_mgmt"
    />
</odoo>
