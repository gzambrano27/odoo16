<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="product_product_wizard_view" model="ir.ui.view">
		<field name="name">product.product.wizard.view</field>
		<field name="model">product.product.wizard</field>
		<field name="arch" type="xml">
			<form string="Import Product">
                <group>
                	<group>
                		<field name="file_import_type" widget="radio"/>
                		<field name="product_option" widget="radio" />
                	</group>
                	<group>
                    	<field name="with_variant" attrs="{'invisible': [('product_option', '=', 'update')]}"/>
                    </group>
                </group>
                <group>
                    <field name="product_search" widget="radio" attrs="{'invisible': [('product_option', '=', 'create')]}"/>
                </group>
				<group>
					<field name="file" filename="name" />
				</group>
				<footer>
					<button 
						name="import_product"
						type="object"
						string="Import"
					/>
					<div style="margin-left: auto;margin-right: 0;">
                        <strong>
                        	Download Sample: 
                        </strong>
                        <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample CSV File/product.csv" class="btn-primary" style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
	                        <i class="fa fa-download"/>
	                        CSV file
                        </a>
                        <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample XLS File/product.xlsx" class="btn-primary" style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
	                        <i class="fa fa-download"/>
	                        Excel file
                        </a>
                    </div>
				</footer>
			</form>
		</field>
	</record>
	<record id="action_product_product_wizard_view" model="ir.actions.act_window">
		<field name="name">Import Product Template</field>
		<field name="res_model">product.product.wizard</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>	
    <menuitem 
    	id="sale.menu_sale_invoicing"
    	name="Invoicing"
    	parent="sale.sale_menu_root"
    	sequence="31" 
    	groups="sales_team.group_sale_salesman"
    />
	<menuitem 
		id="gen_import_data" 
		name="Import Data" 
		parent="sale.sale_menu_root" 
		sequence="22"
	/>	
	<menuitem 
		id="product_product_wizard_menu"
		action="action_product_product_wizard_view" 
		parent="gen_import_data"
	/>
</odoo>
