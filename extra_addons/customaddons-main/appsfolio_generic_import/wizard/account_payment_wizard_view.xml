<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="account_payment_wizard_view" model="ir.ui.view">
        <field name="name">account.payment.wizard.view</field>
        <field name="model">account.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Payment">
                <group>
                    <group>
                        <field name="file" filename="name"/>
                    </group>
                    <group>
                    	<field name ="payment_option" widget="radio"/>
                    </group>
                    <group>
                        <field name ="payment_stage" widget="radio"/>
                    </group>
                </group>
                <footer>
                    <button 
                        name="import_payment_file" 
                        type="object"
                        class="oe_highlight" 
                        string="Import" 
                    />
                    <div style="margin-left: auto;margin-right: 0;">
                        <strong>
                            Download Sample: 
                        </strong>
                        <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample CSV File/payment.csv" class="btn-primary" style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download"/>
                            CSV file
                        </a>
                        <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample XLS File/payment.xls" class="btn-primary" style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download"/>
                            Excel file
                        </a>
                    </div>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_account_payment_wizard_view" model="ir.actions.act_window">
        <field name="name">Account Payment Wizard</field>
        <field name="res_model">account.payment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem 
        id= "menu_import" 
        name= "Import"
        parent="account.menu_finance_receivables" 
    />
    <menuitem 
        id="account_payment_wizard_menu" 
        action="action_account_payment_wizard_view" 
        parent="account.menu_finance_receivables"
    />
</odoo>
