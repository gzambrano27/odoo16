<?xml version="1.0" encoding="UTF-8"?>
<odoo>		
	<record id="po_line_wizard_view" model="ir.ui.view">
		<field name="name">po.line.wizard.view</field>
		<field name="model">po.line.wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
				    <field name="file_import_type" widget="radio"/>
					<field name="purchase_order_file"/>
				</group>
				<group>
			        	<field name="option_import_file_by" widget='radio'/>
			    	</group>
				<group>
			        	<field name="product_details_option" widget='radio'/>
			    	</group>
				<footer>
					<button 
						name="import_po_line" 
						type="object"
						class="oe_highlight" 
						string="Import" 
					/>
					<div style="margin-left: auto;margin-right: 0;">
                        <strong>
                        	Download Sample: 
                        </strong>
                        <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample CSV File/purchase_order_line.csv" class="btn-primary" style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
	                        <i class="fa fa-download"/>
	                        CSV file
                        </a>
                        <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample XLS File/purchase_order_line.xls" class="btn-primary" style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
	                        <i class="fa fa-download"/>
	                        Excel file
                        </a>
                    </div>
				</footer>
			</form>
		</field>
	</record>
	<record id="action_po_line_wizard_view" model="ir.actions.act_window">
		<field name="name">Purchase Order Lines Wizard</field>
		<field name="res_model">po.line.wizard</field>
		<field name="target">new</field>			
		<field name="view_mode">form</field>
	</record>
</odoo>
