<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="vendor_pricelist_wizard_view" model="ir.ui.view">
            <field name="name">vendor.pricelist.wizard.view</field>
            <field name="model">vendor.pricelist.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Vendor Pricelist">
                    <group>
                        <group>
                            <field name="file_import_type" widget="radio" />
                        </group>
                        <group>
                            <field name="file" filename="name" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="option_import_file_by" widget='radio'/>
                        </group>
                        <group>
                            <field name="import_prod_variant_option" widget='radio'/>
                        </group>
                    </group>
                    <footer>
                        <button 
                            name="import_vendor_pricelist" 
                            type="object" 
                            class="oe_highlight"
                            string="Import" 
                        />
                        <div style="margin-left: auto;margin-right: 0;">
                            <strong>
                                Download Sample: 
                            </strong>
                            <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample CSV File/vendor_pricelist.csv" class="btn-primary" style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                                <i class="fa fa-download"/>
                                CSV file
                            </a>
                            <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample XLS File/vendor_pricelist.xls" class="btn-primary" style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                                <i class="fa fa-download"/>
                                Excel file
                            </a>
                        </div>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_vendor_pricelist_wizard_view" model="ir.actions.act_window">
            <field name="name">Import Vendor Pricelist</field>
            <field name="res_model">vendor.pricelist.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem 
            id="vendor_pricelist_wizard_menu"
            action="action_vendor_pricelist_wizard_view"
            parent="purchase.menu_procurement_management"
            groups="sales_team.group_sale_salesman"
            sequence="33"
        />
</odoo>
