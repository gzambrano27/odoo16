<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="res_partner_wizard_view" model="ir.ui.view">
		<field name="name">res.partner.wizard.view</field>
		<field name="model">res.partner.wizard</field>
		<field name="arch" type="xml">
			<form string="Import Partner">
				<group>
                    <field name="file_import_type" widget="radio" />
                </group>
                <group>
                    <field name="partner_option" widget="radio" />
                </group>
				<group>
					<field name="file" filename="name" />
				</group>
				<footer>
					<button 
						name="import_partner" 
						type="object" 
						class="oe_highlight"
						string="Import" 
					/>
					<div style="margin-left: auto;margin-right: 0;">
                        <strong>
                        	Download Sample: 
                        </strong>
                        <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample CSV File/partner.csv" class="btn-primary" style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
	                        <i class="fa fa-download"/>
	                        CSV file
                        </a>
                        <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample XLS File/partner.xlsx" class="btn-primary" style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
	                        <i class="fa fa-download"/>
	                        Excel file
                        </a>
                    </div>
				</footer>
			</form>
		</field>
	</record>
	<record id="action_res_partner_wizard_view" model="ir.actions.act_window">
		<field name="name">Partner Wizard</field>
		<field name="res_model">res.partner.wizard</field>			
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>	
	<menuitem 
		id="res_partner_wizard_menu"
		action="action_res_partner_wizard_view"
		parent="appsfolio_generic_import.gen_import_data"
	/>
</odoo>
