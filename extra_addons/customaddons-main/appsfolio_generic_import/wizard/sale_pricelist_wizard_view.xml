<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="sale_pricelist_wizard_view" model="ir.ui.view">
            <field name="name">sale.pricelist.wizard.view</field>
            <field name="model">sale.pricelist.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Sale Pricelist">
                    <p class="mb16">
                        <h3>
                            When you select a Fix or Percentage option then you need to mention 'Compute Price' and 'Amount' column on file.
                        </h3>
                    </p>
                    <group>
                        <group>
                            <field name="file_import_type" widget="radio" />
                        </group>
                        <group>
                            <field name="file" filename="name" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="option_import_file_by" widget='radio'/>
                        </group>
                        <group>
                            <field name="import_prod_variant_option" widget='radio'/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="compute_type" widget='radio'/>
                        </group>
                    </group>
                    <footer>
                        <button 
                            name="import_sale_pricelist" 
                            string="Import" 
                            type="object" 
                            class="oe_highlight"
                        />
                        <div style="margin-left: auto;margin-right: 0;">
                            <strong>
                                Download Sample: 
                            </strong>
                           <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample CSV File/sale_pricelist_formula.csv" class="btn-primary" style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                                <i class="fa fa-download"/>
                                CSV file
                            </a>
                            <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample XLS File/sale_pricelist_formula.xls" class="btn-primary" style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                                <i class="fa fa-download"/>
                                Excel file
                            </a>
                        </div>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_sale_pricelist_wizard_view" model="ir.actions.act_window">
            <field name="name">Sale Pricelist Wizard</field>
            <field name="res_model">sale.pricelist.wizard</field>
            <field name="domain">[('import_data', '=', True)]</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem 
            id="sale_pricelist_wizard_menu"
            action="action_sale_pricelist_wizard_view"
            parent="sale.product_menu_catalog"
            groups="sales_team.group_sale_salesman,sales_team.group_sale_manager"
            sequence="35"
        />
</odoo>
