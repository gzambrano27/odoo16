<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="stock_quant_wizard_view" model="ir.ui.view">
        <field name="name">stock.quant.wizard.view</field>
        <field name="model">stock.quant.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Inv">
                <group>
                    <group>
                        <field name="file_import_type" widget='radio'/>
                    </group>
                    <group>
                        <field name="option_import_file_by" widget='radio'/>
                    </group>
                    <group>
                        <field name="lot_option"/>
                    </group>
                    <group>
                        <field name="location_id_option"/>
                    </group>
                    </group>
                    <span style="font-size: 20px; color: red;" attrs="{'invisible': [('option_import_file_by', '!=', 'name')]}">
                        Make sure that you have unique product name for all products Otherwise import doesn't work well.
                    </span>
                    <group>
                        <field name="file" filename="filename"/>
                    </group>
                    <footer>
                        <button 
                            name="import_inventory_file" 
                            type="object" 
                            class="oe_highlight"
                            string="Import" 
                        />
                        <div style="margin-left: auto;margin-right: 0;">
                            <strong>
                                Download Sample: 
                            </strong>
                            <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample CSV File/inventory.csv" class="btn-primary" style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                                <i class="fa fa-download"/>
                                CSV file
                            </a>
                            <a role="button" href="/appsfolio_generic_import/static/Sample File/Sample XLS File/inventory.xls" class="btn-primary" style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                                <i class="fa fa-download"/>
                                Excel file
                            </a>
                        </div>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_stock_quant_wizard_view" model="ir.actions.act_window">
            <field name="name">Stock Quant Wizard</field>
            <field name="res_model">stock.quant.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem 
            id="stock_quant_wizard_menu"
            action="action_stock_quant_wizard_view"
            parent="stock.menu_stock_inventory_control"
            sequence="31"
        />
</odoo>
