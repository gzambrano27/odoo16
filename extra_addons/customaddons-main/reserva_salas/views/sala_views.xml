<odoo>
    <record id="view_sala_form" model="ir.ui.view">
        <field name="name">sala.reunion.form</field>
        <field name="model">sala.reunion</field>
        <field name="arch" type="xml">
            <form string="Sala de Reuniones">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="capacidad"/>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sala_tree" model="ir.ui.view">
        <field name="name">sala.reunion.tree</field>
        <field name="model">sala.reunion</field>
        <field name="arch" type="xml">
            <tree string="Salas de Reuniones">
                <field name="name"/>
                <field name="capacidad"/>
            </tree>
        </field>
    </record>

    <record id="action_sala" model="ir.actions.act_window">
        <field name="name">Salas de Reuniones</field>
        <field name="res_model">sala.reunion</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>