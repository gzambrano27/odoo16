<odoo>
    <record id="view_load_initial_balance_wizard" model="ir.ui.view">
        <field name="name">load.initial.balance.wizard.form</field>
        <field name="model">load.initial.balance.wizard</field>
        <field name="arch" type="xml">
            <form string="Cargar Saldos Iniciales">
                <group>
                    <field name="file_data" filename="file_name"/>
                    <field name="file_name"/>
                </group>
                <footer>
                    <button string="Cargar" type="object" name="action_import_initial_balance" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_load_initial_balance_wizard" model="ir.actions.act_window">
        <field name="name">Cargar Saldos Iniciales</field>
        <field name="res_model">load.initial.balance.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_account_initial_balance" name="Saldos Iniciales"
        parent="account.menu_finance_reports" sequence="10"
        action="action_load_initial_balance_wizard"/>
</odoo>
