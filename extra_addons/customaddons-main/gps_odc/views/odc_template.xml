<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="odc_template_form_inherit" model="ir.ui.view">
            <field name="name">odc_template_form_inherit</field>
            <field name="model">odc.template</field>
            <field name="inherit_id" ref="xf_excel_odoo_connector.odc_template_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='field_ids']" position="replace">
                    <field name="field_ids" nolabel="1" context="{'default_model': model}">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="model" invisible="True"/>
                            <field name="field_id" options='{"limit": 10, "no_create": True, "no_open": True, "no_create_edit": True}'/>
                            <field name="name"/>
                            <field name="field_name"/>
                            <field name="related_property"/>
                            <field name="export_type"/>
                        </tree>
                        <form>
                            <group>
                                <field name="model" invisible="True"/>
                                <field name="field_id"/>
                                <field name="name"/>
                                <field name="field_name"/>
                                <field name="related_property"/>
                                <field name="export_type"/>
                            </group>
                        </form>
                    </field>
                </xpath>
            </field>
        </record>

        <menuitem id="menu_odc_gps_root"
                  name="ODC Templates"
                  groups="gps_odc.group_ODC"
        />

        <menuitem
                id="odc_template_menuitem_inherit"
                name="ODC Templates"
                action="xf_excel_odoo_connector.odc_template_act_window"
                parent="menu_odc_gps_root"
                groups="gps_odc.group_ODC"
                sequence="20"
        />
    </data>
</odoo>