<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Grupos de usuarios -->
        <record id="custom_group_purchase_requisition_user" model="res.groups">
            <field name="name">Work Order User</field>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
        </record>

        <record id="custom_group_purchase_requisition_manager" model="res.groups">
            <field name="name">Work Order Manager</field>
            <field name="implied_ids" eval="[(4, ref('custom_group_purchase_requisition_user'))]"/>
        </record>

        <record id="custom_group_purchase_requisition_department" model="res.groups">
            <field name="name">Work Order Department Manager</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Reglas de acceso por empleado -->
        <record id="custom_purchase_requisition_own_rule" model="ir.rule">
            <field name="name">Employee Work Order Own</field>
            <field name="model_id" ref="model_material_requisition_order"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="custom_purchase_requisition_line_employee_rule" model="ir.rule">
            <field name="name">Employee Work Order Lines</field>
            <field name="model_id" ref="model_material_requisition_order_line"/>
            <field name="domain_force">[('requisition_id.employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Reglas para ver todos los registros -->
        <record id="custom_purchase_requisition_all_rule" model="ir.rule">
            <field name="name">Work Orders All</field>
            <field name="model_id" ref="model_material_requisition_order"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[
                (4, ref('custom_group_purchase_requisition_user')),
                (4, ref('purchase.group_purchase_user')),
                (4, ref('custom_group_purchase_requisition_department'))
            ]"/>
        </record>

        <record id="custom_purchase_requisition_line_all_rule" model="ir.rule">
            <field name="name">Work Orders Line All</field>
            <field name="model_id" ref="model_material_requisition_order_line"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[
                (4, ref('custom_group_purchase_requisition_user')),
                (4, ref('purchase.group_purchase_user')),
                (4, ref('custom_group_purchase_requisition_department'))
            ]"/>
        </record>

    </data>
</odoo>
