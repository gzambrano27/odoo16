<?xml version="1.0" ?>
<odoo>
	<data>

        <record id="group_jefe_contable" model="res.groups">
            <field name="name">Jefe Contable</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

          <record model="ir.ui.view"
                id="account_move_form_view_edi_show_inherit">
            <field name="name">account.move.form.view.edi.show.inherit</field>
            <field name="model">account.move</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account_edi.view_move_form_inherit"/>
            <field name="arch" type="xml">

<button name="button_cancel_posted_moves" position="attributes">
    <attribute name="invisible">1</attribute>
</button>

                <button name="button_abandon_cancel_posted_posted_moves" position="attributes">
    <attribute name="invisible">1</attribute>
</button>

                <button name="button_abandon_cancel_posted_posted_moves" position="after">
  <button name="button_cancel" context="{'pass_validation_reverse':True}" icon="fa-times" string="Anular" type="object" groups="account.group_account_invoice" data-hotkey="w" attrs="{'invisible' : ['|', '|', ('id', '=', False), ('state', 'in', ('cancel','draft')),('move_type', '==', 'entry'),('edi_state', '!=', 'sent')]}"/>
                </button>


            </field>
        </record>

          <record model="ir.ui.view"
                id="account_move_tree_view_edi_show_inherit">
            <field name="name">account.move.tree.view.edi.show.inherit</field>
            <field name="model">account.move</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">

<field name="company_currency_id" position="before">
    <field name="id" string="# ID" />
</field>

     <field name="to_check" position="after">
    <field name="l10n_ec_authorization_number"  invisible="not context.get('show_auth',False)"/>
          <field name="l10n_ec_authorization_date"  invisible="not context.get('show_auth',False)"/>
</field>


            </field>
        </record>

          <record model="ir.ui.view"
                id="account_move_form_view_show_inherit">
            <field name="name">account.move.form.view.show.inherit</field>
            <field name="model">account.move</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

         <xpath expr="//group[@name='accounting_info_group']/field[@name='to_check']" position="after">

    <field name="id" string="# ID" attrs="{'invisible':[('id','&lt;=',0)]}"/>
</xpath>

                <xpath expr="//group[@name='misc_group']/field[@name='to_check']" position="after">
    <field name="id" string="# ID" attrs="{'invisible':[('id','&lt;=',0)]}"/>
</xpath>


            </field>
        </record>

       <record model="ir.ui.view"
                id="account_move_form_view_latam_inherit">
            <field name="name">account.move.form.view.latam.inherit</field>
            <field name="model">account.move</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="l10n_ec_edi.account_move_form_invoice_and_withhold_view"/>
            <field name="arch" type="xml">
  <field name="l10n_ec_sri_payment_id" position="after">

      <field name="authorization_type" attrs="{'invisible': ['|','|',('move_type','not in',('in_invoice','in_refund')), ('l10n_latam_use_documents', '=', False), ('l10n_latam_manual_document_number', '=', False), '|', '|', ('l10n_latam_use_documents', '=', False), ('highest_name', '!=', False), ('state', '!=', 'draft')],                             'required': [('partner_id', '!=', False), ('l10n_latam_use_documents', '=', True), '|', ('l10n_latam_manual_document_number', '=', True), ('highest_name', '=', False)],                             'readonly': [('posted_before', '=', True), ('state', '!=', 'draft')]}"/>
<field name="l10n_ec_code_taxsupport" attrs="{'required':[ ('move_type', 'in', ('in_refund','in_invoice',))],'invisible':[ ('move_type', 'not in', ('in_refund','in_invoice',))]}"

                    />
  </field>

            </field>
        </record>

         <record model="ir.ui.view"
                id="account_move_tree_view_out_show_inherit">
            <field name="name">account.move.tree.view.out.show.inherit</field>
            <field name="model">account.move</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">

<field name="name" position="before">
    <field name="id" string="# ID" />
</field>

            </field>
        </record>

        <record model="ir.ui.view"
                id="account_move_tree_view_in_show_inherit">
            <field name="name">account.move.tree.view.in.show.inherit</field>
            <field name="model">account.move</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_in_invoice_bill_tree"/>
            <field name="arch" type="xml">

<field name="name" position="before">
    <field name="id" string="# ID" />
</field>

    <field name="ref" position="before">
        <field name="l10n_ec_code_taxsupport" optional="show" />
         <field name="l10n_ec_withhold_names" optional="show"/>

</field>
            </field>
        </record>


<record id="view_account_move_form_sequence_doc"
			model="ir.ui.view">
			<field name="name">account.move.form.latam.document.doc</field>
			<field name="model">account.move</field>
			<field name="inherit_id"
				ref="account.view_move_form" />
			<field name="arch" type="xml">


	 <field name="to_check" position="before">

	 	<field name="manual_origin"  readonly="1"
				attrs="{'invisible':[('required_origin_info','=',True)]}"
				 />
				 <field name="required_origin_info"  invisible="1"   />
				<field name="manual_document_number"
				placeholder="001-001-000000001"
				attrs="{'invisible':[('required_origin_info','!=',True)],'required':[('required_origin_info','=',True)],'readonly':[('state','!=','draft')]}" />
				<field name="manual_date"
				attrs="{'invisible':[('required_origin_info','!=',True)],'required':[('required_origin_info','=',True)],'readonly':[('state','!=','draft')]}" />
		<field name="manual_origin_authorization"
				attrs="{'invisible':[('required_origin_info','!=',True)],'required':[('required_origin_info','=',True)],'readonly':[('state','!=','draft')]}" />


	</field>



			</field>
		</record>


         <record id="account_payment_purchase.view_move_form_inherit_manual_date" model="ir.ui.view">
            <field name="name">account.move.form.inherit.manual.date</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="manual_date" invisible="1" attrs="{'invisible': [('move_type', '!=', 'out_refund')]}"/>
                    <field name="manual_document_number" invisible="1" attrs="{'invisible': [('move_type', '!=', 'out_refund')]}"/>
                </xpath>
            </field>
        </record>

