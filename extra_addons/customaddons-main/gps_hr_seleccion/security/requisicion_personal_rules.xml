<odoo>
  <data>
    <!-- Record rules -->
    <!-- Visor: solo lectura a todos -->
    <record id="requisicion_personal_rule_visor_read" model="ir.rule">
      <field name="name">RP Visor - Read</field>
      <field name="model_id" ref="model_requisicion_personal"/>
      <field name="groups" eval="[(4, ref('gps_hr_seleccion.group_requisicion_personal_visor'))]"/>
      <field name="domain_force">[(1, '=', 1)]</field>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="0"/>
      <field name="perm_create" eval="0"/>
      <field name="perm_unlink" eval="0"/>
    </record>

    <!-- Usuario: puede ver todas y crear las suyas, editar solo en borrador y propias -->
    <record id="requisicion_personal_rule_usuario_own" model="ir.rule">
      <field name="name">RP Usuario - Own</field>
      <field name="model_id" ref="model_requisicion_personal"/>
      <field name="groups" eval="[(4, ref('gps_hr_seleccion.group_requisicion_personal_usuario'))]"/>
      <field name="domain_force">['|', ('solicitante_id', '=', user.id), (1,'=',1)]</field>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_create" eval="1"/>
      <field name="perm_unlink" eval="0"/>
    </record>

    <!-- Jefe: puede leer y escribir -->
    <record id="requisicion_personal_rule_jefe" model="ir.rule">
      <field name="name">RP Jefe - All</field>
      <field name="model_id" ref="model_requisicion_personal"/>
      <field name="groups" eval="[(4, ref('gps_hr_seleccion.group_requisicion_personal_jefe'))]"/>
      <field name="domain_force">[(1, '=', 1)]</field>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_create" eval="1"/>
      <field name="perm_unlink" eval="0"/>
    </record>

    <!-- Gerente: todo menos eliminar -->
    <record id="requisicion_personal_rule_gerente" model="ir.rule">
      <field name="name">RP Gerente - All</field>
      <field name="model_id" ref="model_requisicion_personal"/>
      <field name="groups" eval="[(4, ref('gps_hr_seleccion.group_requisicion_personal_gerente'))]"/>
      <field name="domain_force">[(1, '=', 1)]</field>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_create" eval="1"/>
      <field name="perm_unlink" eval="0"/>
    </record>

    <!-- Admin: total -->
    <record id="requisicion_personal_rule_admin" model="ir.rule">
      <field name="name">RP Admin - All</field>
      <field name="model_id" ref="model_requisicion_personal"/>
      <field name="groups" eval="[(4, ref('gps_hr_seleccion.group_requisicion_personal_admin'))]"/>
      <field name="domain_force">[(1, '=', 1)]</field>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_create" eval="1"/>
      <field name="perm_unlink" eval="1"/>
    </record>
  </data>
</odoo>
