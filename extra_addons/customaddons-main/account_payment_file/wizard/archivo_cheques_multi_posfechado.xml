<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="informe_cheques_posfechados_view" model="ir.ui.view">
        <field name="name">Consultar Cheques Posfechados</field>
        <field name="model">archivo.cheques.posfechados</field>
        <field name="arch" type="xml">
            <form string="Consultar Informe de Cheques Posfechados">
            	<group>
                	<field name="anio" options="{'no_quick_create': True, 'no_create_edit' : True}" required = '1' string="Anio" />
                	<field name="semana_desde" required = '1' options="{'no_quick_create': True, 'no_create_edit' : True}" domain="[('anioexportacion_id','=',anio)]"/>
                	<field name="semana_hasta" required = '1' options="{'no_quick_create': True, 'no_create_edit' : True}" domain="[('anioexportacion_id','=',anio)]"/>
                </group>
                <footer>
                    <button name="export_csv" string="Exportar CSV" type="object" default_focus="1" class="oe_highlight" />
                    <span> or </span>
                    <button string="Cancelar" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="message_warning_informe_chqpost_view" model="ir.ui.view">
            <field name="name">Mensaje</field>
            <field name="model">archivo.cheques.posfechados</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              <form string="Mensaje">
              <group width="250" height="150" colspan="4">
               	<separator colspan="4" string="Descarga el archivo" />
                <newline/>
              
                <newline/>
                    <field name="file_name" invisible="1"/>
   					<field name="file_output" nolabel="0" colspan="4" filename="file_name" readonly="1"/>
               	</group>
             	<footer>
                  <button string="Ok" class="btn-default" special="cancel"/>   
                </footer>
             </form>
            </field>
        </record>

    <record id="action_informe_cheque_posfechado" model="ir.actions.act_window">
        <field name="name">Consultar Cheques Posfechados</field>
        <field name="res_model">archivo.cheques.posfechados</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <menuitem name = 'Informe Cheques Posfechados'  id="menu_informe_cheques_posfechados" parent="account.menu_finance_reports" action="action_informe_cheque_posfechado" sequence='52'/>
    
    
