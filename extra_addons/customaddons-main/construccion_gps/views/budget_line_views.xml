<odoo>
    <!-- Budget Line Views -->
    <record id="view_budget_line_form" model="ir.ui.view">
        <field name="name">Formulario de Línea de Presupuesto</field>
        <field name="model">budget.line</field>
        <field name="arch" type="xml">
            <form string="Línea de Presupuesto">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="analytic_account_id"/>
                        <field name="quantity"/>
                        <field name="unit_price"/>
                        <field name="total_cost" readonly="1"/>
                        <field name="apu_id"/>
                        <field name="description"/>
                        <field name="analysis"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" options="{'post_refresh': 'recipients'}"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_budget_line_tree" model="ir.ui.view">
        <field name="name">Árbol de Líneas de Presupuesto</field>
        <field name="model">budget.line</field>
        <field name="arch" type="xml">
            <tree string="Líneas de Presupuesto">
                <field name="name"/>
                <field name="quantity"/>
                <field name="unit_price"/>
                <field name="total_cost" readonly="1"/>
                <field name="apu_id"/>
            </tree>
        </field>
    </record>

    <record id="action_budget_line" model="ir.actions.act_window">
        <field name="name">Líneas de Presupuesto</field>
        <field name="res_model">budget.line</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
