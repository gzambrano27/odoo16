<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_plantilla_tareas_form" model="ir.ui.view">
        <field name="name">plantilla.tareas.form</field>
        <field name="model">plantilla.tareas</field>
        <field name="arch" type="xml">
            <form string="Plantilla de Tareas">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                    </group>
                    <notebook>
                        <page string="Tareas">
                            <field name="line_ids" context="{'default_plantilla_tarea_id': active_id}">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="duracion_total"/>
                                </tree>
                                <form string="Plantilla Tareas Line">
                                    <sheet>
                                        <group>
                                            <field name="name"/>
                                            <field name="duracion_total"/>
                                        </group>
                                        <notebook>
                                            <page string="Detalles de Tarea">
                                                <field name="detalle_ids">
                                                    <tree editable="bottom">
                                                        <field name="tareas"/>
                                                        <field name="duracion"/>
                                                        <field name="fecha_inicio"/>
                                                        <field name="fecha_fin"/>
                                                        <field name="cantidad"/>
                                                        <field name="costo"/>
                                                    </tree>
                                                    <form string="Detalle Tarea">
                                                        <group>
                                                            <field name="tareas"/>
                                                            <field name="duracion"/>
                                                            <field name="fecha_inicio"/>
                                                            <field name="fecha_fin"/>
                                                            <field name="cantidad"/>
                                                            <field name="costo"/>
                                                        </group>
                                                    </form>
                                                </field>
                                            </page>
                                        </notebook>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"
                           options="{'post_refresh': 'recipients'}"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_plantilla_tareas_tree" model="ir.ui.view">
        <field name="name">plantilla.tareas.tree</field>
        <field name="model">plantilla.tareas</field>
        <field name="arch" type="xml">
            <tree string="Plantilla de Tareas">
                <field name="name"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="action_plantilla_tareas" model="ir.actions.act_window">
        <field name="name">Plantilla de Tareas</field>
        <field name="res_model">plantilla.tareas</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Definir tareas para las plantilla.</p>
        </field>
    </record>
</odoo>
