<odoo>
    <data>
        <!-- Vista Form del modelo Proyecto -->

        <record id="project_project_view_form_simplified_analytic" model="ir.ui.view">
            <field name="name">project.project.view.form.simplified.analytic</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="hr_timesheet.project_project_view_form_simplified_inherit_timesheet"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('o_setting_box')]" position="after">
                    <div class="col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="allow_analytic_account"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="allow_analytic_account"/>
                            <div class="text-muted" id="allow_analytic_account">
                                Crear cuenta analítica
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="project_project_view_edit_project_inherit_form" model="ir.ui.view">
            <field name="name">project.project.view.edit.project.analytic</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="sale_project.view_edit_project_inherit_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_sales_invoicing']" position="inside">
                    <div>
                        <div class="o_setting_box" id="allow_analytic_account_container">
                            <div class="o_setting_left_pane">
                                <label for="allow_analytic_account"/>
                                <field name="allow_analytic_account" widget="boolean_toggle"/>
                            </div>
                        </div>
                    </div>
                </xpath>
                <!-- <xpath expr="//div[hasclass('o_setting_box')]" position="after">
                    <div class="col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="allow_analytic_account"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="allow_analytic_account"/>
                            <div class="text-muted" id="allow_analytic_account">
                                Crear cuenta analítica
                            </div>
                        </div>
                    </div>
                </xpath> -->
            </field>
        </record>

    </data>
</odoo>
