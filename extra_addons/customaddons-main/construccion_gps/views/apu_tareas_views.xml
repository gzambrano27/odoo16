<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_apu_tareas_form" model="ir.ui.view">
        <field name="name">apu.tareas.form</field>
        <field name="model">apu.tareas</field>
        <field name="arch" type="xml">
            <form string="APU Tareas">
                <header>
                    <button name="export_excel" type="object" string="Exportar Plantilla"/>
                </header>
                <sheet>
                    <!-- SecciÃ³n para cargar el archivo Excel -->
                    <group col="12" class="mb-3">
                        <group colspan="6">
                            <field name="import_filename" invisible="1"/>
                            <field name="import_file" filename="import_filename" widget="binary"/>
                        </group>
                        <group colspan="6">
                            <button name="import_excel" string="Importar" type="object" class="btn-primary"/>
                        </group>
                    </group>
                    <group>
                        <field name="product_apu_id" options="{'no_open':True,'no_create':True}"/>
                        <field name="descripcion"/>
                        <field name="company_id"/>
                    </group>
                    <notebook>
                        <page string="Tareas">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="tarea_id" options="{'no_open':True,'no_create':True}"/>
                                    <field name="tipo_actividad"/>
                                    <field name="unidad"/>
                                    <field name="cantidad"/>
                                    <field name="tarifa"/>
                                    <field name="costo_hora_actividad" readonly="1"/>
                                    <field name="rendimiento"/>
                                    <field name="costo_final_actividad" readonly="1"/>
                                    <field name="company_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" options="{'post_refresh': 'recipients'}"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_apu_tareas_tree" model="ir.ui.view">
        <field name="name">apu.tareas.tree</field>
        <field name="model">apu.tareas</field>
        <field name="arch" type="xml">
            <tree string="APU Tareas">
                <field name="product_apu_id"/>
                <field name="descripcion"/>
                <field name="company_id"/>
                <field name="create_uid" widget="many2one_avatar_user" string="Creado por" optional="show"/>
                <field name="create_date" string="Fecha de creaciÃ³n" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="action_apu_tareas" model="ir.actions.act_window">
        <field name="name">APU Tareas</field>
        <field name="res_model">apu.tareas</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Definir tareas para las APU.</p>
        </field>
    </record>

    
</odoo>
