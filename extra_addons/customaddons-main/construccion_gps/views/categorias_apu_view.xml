<odoo>
    <!-- Vista Tree para Categorías de APU -->
    <record id="view_apu_categoria_tree" model="ir.ui.view">
        <field name="name">apu.categoria.tree</field>
        <field name="model">apu.categoria</field>
        <field name="arch" type="xml">
            <tree string="Categorías de APU">
				<field name="codigo"/>
                <field name="name"/>
                <field name="create_uid" widget="many2one_avatar_user" string="Creado por" optional="show"/>
                <field name="create_date" string="Fecha de creación" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario para Categorías de APU -->
    <record id="view_apu_categoria_form" model="ir.ui.view">
        <field name="name">apu.categoria.form</field>
        <field name="model">apu.categoria</field>
        <field name="arch" type="xml">
            <form string="Categoría de APU">
                <sheet>
                    <group>
						<field name="codigo"/>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Subcategorías">
                            <field name="subcategoria_ids">
                                <tree editable="bottom">
									<field name="codigo"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
				<div class="oe_chatter">
					<field name="message_follower_ids" />
					<field name="message_ids" colspan="4" nolabel="1" />
				</div>
            </form>
        </field>
    </record>

    <!-- Vista Tree para Subcategorías de APU -->
    <record id="view_apu_subcategoria_tree" model="ir.ui.view">
        <field name="name">apu.subcategoria.tree</field>
        <field name="model">apu.subcategoria</field>
        <field name="arch" type="xml">
            <tree string="Subcategorías de APU">
				<field name="codigo"/>
                <field name="categoria_id"/>
                <field name="name"/>
                <field name="create_uid" widget="many2one_avatar_user" string="Creado por" optional="show"/>
                <field name="create_date" string="Fecha de creación" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario para Subcategorías de APU -->
    <record id="view_apu_subcategoria_form" model="ir.ui.view">
        <field name="name">apu.subcategoria.form</field>
        <field name="model">apu.subcategoria</field>
        <field name="arch" type="xml">
            <form string="Subcategoría de APU">
                <sheet>
                    <group>
						<field name="codigo"/>
						<field name="categoria_id" options="{'no_open':True,'no_create':True}"/>
                        <field name="name"/>
                    </group>
                </sheet>
				<div class="oe_chatter">
					<field name="message_follower_ids" />
					<field name="message_ids" colspan="4" nolabel="1" />
				</div>
            </form>
        </field>
    </record>

    <!-- Acción para Categorías de APU -->
    <record id="action_apu_categoria" model="ir.actions.act_window">
        <field name="name">Categorías de APU</field>
        <field name="res_model">apu.categoria</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_apu_categoria_tree"/>
    </record>

    <!-- Acción para Subcategorías de APU -->
    <record id="action_apu_subcategoria" model="ir.actions.act_window">
        <field name="name">Subcategorías de APU</field>
        <field name="res_model">apu.subcategoria</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_apu_subcategoria_tree"/>
    </record>
</odoo>
