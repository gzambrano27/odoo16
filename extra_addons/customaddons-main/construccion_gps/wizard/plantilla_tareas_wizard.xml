<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- Vista del wizard -->
    <record id="view_plantilla_tareas_import_wizard_form" model="ir.ui.view">
        <field name="name">plantilla.tareas.import.wizard.form</field>
        <field name="model">plantilla.tareas.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar XML de Project" enctype="multipart/form-data">
                <group>
                    <field name="plantilla_id" readonly="1"/>
					<field name="filename" invisible="1"/>
                    <field name="file" filename="filename"/>
                </group>
                <footer>
                    <button name="action_import" string="Importar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción para el wizard -->
    <record id="action_open_plantilla_tareas_import_wizard" model="ir.actions.act_window">
        <field name="name">Importar Cronograma XML</field>
        <field name="res_model">plantilla.tareas.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

	<!-- Herencia y botón en la vista de plantilla -->
    <record id="view_plantilla_tareas_form_inherit_import_wizard" model="ir.ui.view">
        <field name="name">plantilla.tareas.form.inherit.import.wizard</field>
        <field name="model">plantilla.tareas</field>
        <field name="inherit_id" ref="construccion_gps.view_plantilla_tareas_form"/>
        <field name="arch" type="xml">
            <sheet position="before">
                <header>
                    <button name="%(action_open_plantilla_tareas_import_wizard)d" type="action"
                            string="Importar XML de Proyecto"
                            class="oe_highlight"
                            icon="fa-upload"
                            context="{'default_plantilla_id': active_id}"/>
                </header>
            </sheet>
        </field>
    </record>
</odoo>
