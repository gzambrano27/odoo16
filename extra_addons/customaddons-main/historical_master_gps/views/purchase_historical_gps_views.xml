<odoo>
    <!-- Vista de formulario para el modelo de Compras -->
    <record id="view_purchase_historical_gps_form" model="ir.ui.view">
        <field name="name">purchase.historical.gps.form</field>
        <field name="model">purchase.historical.gps</field>
        <field name="arch" type="xml">
            <form string="Historial de Compras GPS">
                <sheet>
                    <group>
                        <!-- Campos principales del modelo de Compras -->
                        <field name="erp"/>
                        <field name="categoria"/>
                        <field name="referencia_interna"/>
                        <field name="proveedor"/>
                        <field name="categoria_2"/>
                        <field name="subcategoria"/>
                        <field name="marca"/>
                        <field name="descripcion"/>
                        <field name="tipo_transaccion"/>
                        <field name="tipo"/>
                        <field name="fecha"/>
                        <field name="nombre"/>
                        <field name="numero"/>
                        <field name="cantidad"/>
                        <field name="costo"/>
                        <field name="valor_1"/>
                        <field name="valor_2"/>
                        <field name="a_mano"/>
                        <field name="costo_promedio"/>
                        <field name="valor_activo"/>
                        <field name="costo_vta"/>
                        <field name="mes"/>
                        <field name="anio"/>
                    </group>
                    <group>
                        <!-- Sección para campos adicionales, si es necesario -->
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" options="{'post_refresh': 'recipients'}"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de búsqueda para el modelo de Compras -->
    <record id="view_purchase_historical_gps_search" model="ir.ui.view">
        <field name="name">purchase.historical.gps.search</field>
        <field name="model">purchase.historical.gps</field>
        <field name="arch" type="xml">
            <search string="Buscar en Historial de Compras GPS">
                <!-- Agrupación de filtros -->
                <group string="Agrupacion">
                    <filter string="Agrupar por ERP" name="group_by_erp" context="{'group_by': 'erp'}"/>
                    <filter string="Agrupar por Referencia Interna" name="group_by_referencia_interna" context="{'group_by': 'referencia_interna'}"/>
                    <filter string="Agrupar por Mes" name="group_by_mes" context="{'group_by': 'mes'}"/>
                    <filter string="Agrupar por Año" name="group_by_anio" context="{'group_by': 'anio'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista de lista para el modelo de Compras -->
    <record id="view_purchase_historical_gps_tree" model="ir.ui.view">
        <field name="name">purchase.historical.gps.tree</field>
        <field name="model">purchase.historical.gps</field>
        <field name="arch" type="xml">
            <tree string="Historial de Compras GPS">
                <!-- Campos de la vista de lista -->
                <field name="erp"/>
                <field name="referencia_interna"/>
                <field name="nombre"/>
                <field name="descripcion"/>
                <field name="costo"/>
                <field name="cantidad"/>
                <field name="mes"/>
                <field name="anio"/>
            </tree>
        </field>
    </record>

    <!-- Acción para abrir el historial de compras GPS -->
    <record id="action_purchase_historical_gps" model="ir.actions.act_window">
        <field name="name">Historial de Compras GPS</field>
        <field name="res_model">purchase.historical.gps</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Esta es la vista del historial de compras GPS.</p>
        </field>
    </record>
</odoo>
