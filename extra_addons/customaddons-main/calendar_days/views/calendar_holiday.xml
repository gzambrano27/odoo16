<?xml version="1.0"?>
<odoo>
	<data>

		<record id="calendar_holiday_view_filter" model="ir.ui.view">
			<field name="name">calendar.holiday.filter</field>
			<field name="model">calendar.holiday</field>
			<field name="arch" type="xml">
				<search string="Días Festivos">
					<field name="name" />
					<field name="active" />
				</search>
			</field>
		</record>

		<record id="calendar_holiday_view_tree" model="ir.ui.view">
			<field name="name">calendar.holiday.tree</field>
			<field name="model">calendar.holiday</field>
			<field name="type">tree</field>
			<field eval="8" name="priority" />
			<field name="arch" type="xml">
				<tree string="Días Festivos" 
					delete="false">
					<field name="name" />
					<field name="active" />
				</tree>
			</field>
		</record>

		<record id="calendar_holiday_view_form" model="ir.ui.view">
			<field name="name">calendar.holiday.form</field>
			<field name="model">calendar.holiday</field>
			<field name="type">form</field>
			<field eval="8" name="priority" />
			<field name="arch" type="xml">
				<form string="Días Festivos" version="16.0">
					<group colspan="4" col="2" 
						delete="false">
						<group colspan="2">
							<field name="name" colspan="2" />
						</group>
						<group colspan="2">
							<field name="active" colspan="2" />
						</group>
					</group>
				</form>
			</field>
		</record>
		
		<record id="calendar_holiday_view_action" model="ir.actions.act_window">
			<field name="name">Días Festivos</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">calendar.holiday</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{}</field>
			<field name="view_id" ref="calendar_holiday_view_tree" />
			<field name="search_view_id" ref="calendar_holiday_view_filter" />
		</record>

		<record model="ir.actions.act_window.view" id="calendar_holiday_view_tree_action">
			<field name="sequence" eval="1" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="calendar_holiday_view_tree" />
			<field name="act_window_id" ref="calendar_holiday_view_action" />
		</record>

		<record model="ir.actions.act_window.view" id="calendar_holiday_view_form_action">
			<field name="sequence" eval="2" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="calendar_holiday_view_form" />
			<field name="act_window_id" ref="calendar_holiday_view_action" />
		</record>
		
	</data>
</odoo>