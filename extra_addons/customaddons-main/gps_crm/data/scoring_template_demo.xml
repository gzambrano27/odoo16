    <field name="stage">CAPACIDAD FINANCIERA</field>
    <field name="description">Tiene presupuesto capex asignado</field>
    <field name="weight">5</field>
    <field name="question_type">yes_no</field>
  </record>

  <record id="tpl_line_6" model="crm.lead.scoring.template.line">
