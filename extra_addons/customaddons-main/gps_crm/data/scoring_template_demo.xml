<?xml version="1.0" encoding="utf-8"?>
<odoo >
  <record id="tpl_default_scoring" model="crm.lead.scoring.template">
    <field name="name">Plantilla estándar (100 pts)</field>
  </record>

  <record id="tpl_line_1" model="crm.lead.scoring.template.line">
    <field name="template_id" ref="tpl_default_scoring"/>
    <field name="sequence">10</field>
    <field name="stage">PERFIL DE LA EMPRESA</field>
    <field name="description">La empresa tiene +6 años de existencia</field>
    <field name="weight">5</field>
    <field name="question_type">yes_no</field>
  </record>

  <record id="tpl_line_2" model="crm.lead.scoring.template.line">
    <field name="template_id" ref="tpl_default_scoring"/>
    <field name="sequence">20</field>
    <field name="stage">PERFIL DE LA EMPRESA</field>
    <field name="description">Es una empresa líder o reconocida en su sector</field>
    <field name="weight">5</field>
    <field name="question_type">yes_no</field>
  </record>

  <record id="tpl_line_3" model="crm.lead.scoring.template.line">
    <field name="template_id" ref="tpl_default_scoring"/>
    <field name="sequence">30</field>
