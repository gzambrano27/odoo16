<odoo>
    <!-- Grupo base: Visor -->
    <record id="group_crm_viewer_custom" model="res.groups">
        <field name="name">Visor CRM</field>
        <field name="category_id" ref="base.module_category_sales_crm"/>
    </record>

    <!-- Grupo base: Usuario Oportunidades -->
    <record id="group_crm_user_custom" model="res.groups">
        <field name="name">Usuario Oportunidades</field>
        <field name="category_id" ref="base.module_category_sales_crm"/>
    </record>

    <!-- Ingeniería (antes de KAM) -->
    <record id="group_crm_engineering_custom" model="res.groups">
        <field name="name">Ingeniería</field>
        <field name="category_id" ref="base.module_category_sales_crm"/>
    </record>

    <!-- KAM -->
    <record id="group_crm_kam_custom" model="res.groups">
        <field name="name">KAM</field>
        <field name="category_id" ref="base.module_category_sales_crm"/>
        <field name="implied_ids" eval="[(4, ref('gps_crm.group_crm_user_custom'))]"/>
    </record>

    <!-- Gerencia -->
    <record id="group_crm_manager_custom" model="res.groups">
        <field name="name">Gerencia</field>
        <field name="category_id" ref="base.module_category_sales_crm"/>
    </record>

    <!-- Comité Comercial (después de Gerencia, antes de Administrador) -->
    <record id="group_crm_comite_custom" model="res.groups">
        <field name="name">Comité Comercial</field>
        <field name="category_id" ref="base.module_category_sales_crm"/>
        <field name="implied_ids" eval="[(4, ref('gps_crm.group_crm_manager_custom'))]"/>
    </record>

    <!-- Administrador CRM -->
    <record id="group_crm_admin_custom" model="res.groups">
        <field name="name">Administrador CRM</field>
        <field name="category_id" ref="base.module_category_sales_crm"/>
        <field name="implied_ids" eval="[(4, ref('gps_crm.group_crm_comite_custom'))]"/>
    </record>
</odoo>
