	<!-- Vista Tree para Leads -->
	<record id="view_crm_case_tree_view_leads_custom" model="ir.ui.view">
		<field name="name">crm.case.tree.view.leads.custom</field>
		<field name="model">crm.lead</field>
		<field name="arch" type="xml">
			<tree string="Leads" default_order="id desc" decoration-danger="rango_color == 'danger'"
      decoration-warning="rango_color == 'warning'"
      decoration-success="rango_color == 'success'">
				<field name="create_date" string="Fecha" widget="date"/>
				<!-- <field name="partner_id" string="Cliente"/> -->
				<field name="partner_name" string="Cliente"/>
				<field name="name" string="Proyecto"/>
				<field name="user_id" string="Responsable"/>
				<field name="score_percent" string="Calificacion" groups="gps_crm.group_crm_kam_custom, gps_crm.group_crm_manager_custom,gps_crm.group_crm_admin_custom"/>
				<field name="score_final" string="Calificacion" groups="gps_crm.group_crm_kam_custom, gps_crm.group_crm_manager_custom,gps_crm.group_crm_admin_custom"/>
				<field name="rango_color" invisible='1'/>
				<field name="write_date" string="F. Ult. Act" groups="gps_crm.group_crm_manager_custom,gps_crm.group_crm_admin_custom, gps_crm.group_crm_viewer_custom"/>
				<field name="write_uid" string="U. Ult. Act" groups="gps_crm.group_crm_manager_custom,gps_crm.group_crm_admin_custom, gps_crm.group_crm_viewer_custom"/>
			</tree>
		</field>
	</record>

	<!-- Acción de Leads usando esta vista -->
	<record id="gps_crm_lead_action_leads" model="ir.actions.act_window">
		<field name="name">Leads</field>
		<field name="res_model">crm.lead</field>
		<field name="view_mode">tree,form,kanban,calendar,pivot,graph,activity</field>
		<field name="domain">[('type','=','lead')]</field>
		<field name="context">{'default_type':'lead'}</field>
		<field name="search_view_id" ref="crm.view_crm_case_opportunities_filter"/>
	</record>

	<!-- Vincular la vista tree a la acción -->
	<record id="gps_crm_lead_action_leads_tree_view" model="ir.actions.act_window.view">
		<field name="sequence" eval="1"/>
		<field name="view_mode">tree</field>
		<field name="view_id" ref="view_crm_case_tree_view_leads_custom"/>
		<field name="act_window_id" ref="gps_crm_lead_action_leads"/>
	</record>

	<menuitem id="gps_menu_crm_leads"
			name="Leads"
			parent="crm.crm_menu_root"
			action="gps_crm_lead_action_leads"
			sequence="1"/>

</odoo>