<?xml version="1.0" encoding="utf-8" ?>
<odoo>


<record id="view_sale_order_form_inht" model="ir.ui.view">
		<field name="name">sale.order.form.inherit</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form" />
		<field name="arch" type="xml">
			<field name="payment_term_id" position="after">
				<field name="lead_project_id" 
				options="{'no_create':True,'no_edit':True,'no_open':True}"
				readonly="1" force_save="1" attrs="{'invisible': [('lead_project_id', '=', False)]}" />
				<field name="lead_project_sequence" readonly="1" force_save="1" attrs="{'invisible': [('lead_project_id', '=', False)]}" />
			</field>

		</field>
	</record>
	
	
	
	</odoo>
	
	