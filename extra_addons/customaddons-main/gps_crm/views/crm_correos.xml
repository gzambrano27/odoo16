<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="crm_correos_search_view">
        <field name="name">crm.correos.search</field>
        <field name="model">crm.correo</field>
        <field name="arch" type="xml">
            <search string="Correos">
                <field name="name" />
                <field name="tipo" />
                <field name="correo" />
                <field name="estado" />

            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="crm_correos_tree_view">
        <field name="name">crm.correos.tree</field>
        <field name="model">crm.correo</field>
        <field name="arch" type="xml">
            <tree string="Correo">
                <field name="name" />
                <field name="tipo" />
                <field name="correo" />
                <field name="estado" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="crm_correo_form_view">
        <field name="name">crm.correo.form</field>
        <field name="model">crm.correo</field>
        <field name="arch" type="xml">
            <form string="Correo">
                <sheet string="Correos">
                    <label for="name" />
                    <h2><field name="name" /></h2>
                    <group col="4">
                        <field name="tipo" />
                        <field name="correo" />
                        <field name="description" />
                        <field name="estado" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_crm_correo_view">
        <field name="name">Correo</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.correo</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[ ]</field>
        <field name="context">{ }</field>
        <field name="search_view_id" ref="crm_correos_search_view" />
    </record>

    <record id="action_crm_correo_view_tree" model="ir.actions.act_window.view">
        <field eval="1" name="sequence" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="crm_correos_tree_view" />
        <field name="act_window_id" ref="action_crm_correo_view" />
    </record>

    <record id="action_crm_correo_view_form" model="ir.actions.act_window.view">
        <field eval="2" name="sequence" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="crm_correo_form_view" />
        <field name="act_window_id" ref="action_crm_correo_view" />
    </record>
</odoo>
	

