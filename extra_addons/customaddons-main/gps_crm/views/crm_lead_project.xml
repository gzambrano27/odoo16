<?xml version="1.0" encoding="utf-8" ?>
<odoo>


 <record model="ir.ui.view" id="crm_lead_project_search_view">
            <field name="name">crm.lead.project.search</field>
            <field name="model">crm.lead.project</field>
            <field name="arch" type="xml">
                <search string="Proyecto">
                 <field name="code" /> 
                    <field name="name" /> 
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="crm_lead_project_tree_view">
            <field name="name">crm.lead.project.tree</field>
            <field name="model">crm.lead.project</field>
            <field name="arch" type="xml">
                <tree string="Proyecto">
                 <field name="code" /> 
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="crm_lead_project_form_view">
            <field name="name">crm.lead.project.form</field>
            <field name="model">crm.lead.project</field>
            <field name="arch" type="xml">
                <form string="Proyecto">
                    <sheet string="Proyecto">
                        <label for="name" />
                        <h2><field name="name" /></h2>
                        <group col="4">
                            <field name="code" /> 
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_crm_lead_project_view">
            <field name="name">Proyecto</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.lead.project</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[ ]</field>
            <field name="context">{ }</field>
            <field name="search_view_id" ref="crm_lead_project_search_view" />
        </record>

        <record id="action_crm_lead_project_view_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="crm_lead_project_tree_view" />
            <field name="act_window_id" ref="action_crm_lead_project_view" />
        </record>

        <record id="action_crm_lead_project_view_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="crm_lead_project_form_view" />
            <field name="act_window_id" ref="action_crm_lead_project_view" />
        </record>
	
	
	
	</odoo>
	
	
	