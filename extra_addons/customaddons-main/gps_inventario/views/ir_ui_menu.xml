	<data noupdate="1">
        <!-- Categoría: Stock -->
        <record id="module_category_stock" model="ir.module.category">
            <field name="name">Inventario</field>
            <field name="description">Categoría para grupos relacionados con el inventario y devoluciones y costos</field>
            <field name="sequence">10</field>
        </record>
    </data>


	<!-- Grupo: Devoluciones -->
	<record id="group_devoluciones" model="res.groups">
		<field name="name">Grupo de Devoluciones</field>
		<field name="category_id" ref="gps_inventario.module_category_stock" /> <!-- Categoría del grupo -->
	</record>

	<!-- Grupo: Costos -->
	<record id="group_costos" model="res.groups">
		<field name="name">Grupo de Costos</field>
		<field name="category_id" ref="gps_inventario.module_category_stock" /> <!-- Categoría del grupo -->
	</record>

	<!-- Grupo: Transferencias -->
	<record id="group_transferencias" model="res.groups">
		<field name="name">Grupo de Transferencias</field>
		<field name="category_id" ref="gps_inventario.module_category_stock" /> <!-- Categoría del grupo -->
	</record>
	<!-- Grupo: Despachos -->
	<record id="group_despachos" model="res.groups">
		<field name="name">Grupo de Despachos</field>
		<field name="category_id" ref="gps_inventario.module_category_stock" /> <!-- Categoría del grupo -->
	</record>

	<!-- Permisos del grupo para el modelo stock.picking -->
	<record id="access_stock_picking_devoluciones" model="ir.model.access">
		<field name="name">access_stock_picking_devoluciones</field>
		<field name="model_id" ref="stock.model_stock_picking" />
		<field name="group_id" ref="gps_inventario.group_devoluciones" />
		<field name="perm_read" eval="1" />
		<field name="perm_write" eval="1" />
		<field name="perm_create" eval="0" />
		<field name="perm_unlink" eval="0" />
	</record>

