<odoo>
    <record id="view_move_line_tree_analytic" model="ir.ui.view">
        <field name="name">stock.move.line.tree</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field
                    name="analytic_account_names"
                    optional="hide"
                    groups="analytic.group_analytic_accounting"
                    options="{'product_field': 'product_id', 'business_domain': 'stock_move'}"
                />
            </field>
        </field>
    </record>

	 <record id="view_stock_move_line_detailed_operation_tree_locked" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree.locked</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="replace">
                <field name="product_id" required="1" context="{'default_detailed_type': 'product'}" attrs="{'readonly': ['|', ('state', '=', 'done'), ('move_id', '!=', False)]}" options='{"limit": 10, "no_create": True, "no_open": True, "no_create_edit": True}'/>
            </xpath>
        </field>
    </record>
</odoo>