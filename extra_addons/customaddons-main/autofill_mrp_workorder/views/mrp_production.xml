<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_production_autocomplete_form_inherit" model="ir.ui.view">
        <field name="name">mrp.production.responsible.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="priority" eval="9"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_raw_ids']" position="before">
                <button
                        name="autofill_qty_done" type="object" string="Autocomplete"
                        attrs="{'invisible': [('state','not in', ('confirmed', 'progress', 'to_close'))]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
