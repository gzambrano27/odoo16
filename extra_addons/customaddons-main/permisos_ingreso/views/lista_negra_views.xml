<!-- views/lista_negra_views.xml -->
<odoo>
    <!-- Vista Formulario de Lista Negra -->
    <record id="view_lista_negra_form" model="ir.ui.view">
        <field name="name">lista.negra.form</field>
        <field name="model">permisos_ingreso.lista_negra</field>
        <field name="arch" type="xml">
            <form string="Lista negra">
                <sheet>
                    <group>
                        <field name="cedula"/>
                        <field name="apellidos"/>
                        <field name="nombres"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" options="{'post_refresh': 'recipients'}"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista Árbol de Lista Negra -->
    <record id="view_lista_negra_tree" model="ir.ui.view">
        <field name="name">lista.negra.tree</field>
        <field name="model">permisos_ingreso.lista_negra</field>
        <field name="arch" type="xml">
            <tree string="Lista negra" default_order="apellidos asc">
                <field name="cedula"/>
                <field name="apellidos"/>
                <field name="nombres"/>
                <field name="create_uid" widget="many2one_avatar_user" string="Creado por" optional="show"/>
                <field name="create_date" string="Fecha de creación" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- Definición de la acción para Lista Negra -->
    <record id="action_lista_negra" model="ir.actions.act_window">
        <field name="name">Lista negra</field>
        <field name="res_model">permisos_ingreso.lista_negra</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
