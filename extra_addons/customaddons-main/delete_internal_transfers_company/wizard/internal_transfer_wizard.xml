<odoo>
    <record id="view_internal_transfer_wizard_form" model="ir.ui.view">
        <field name="name">internal.transfer.wizard.form</field>
        <field name="model">internal.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="Manage Internal Transfers">
                <group>
                    <field name="company_id"/>
                </group>
                <group>
                    <field name="transfer_line_ids">
                        <tree editable="bottom">
                            <field name="transfer_id"/>
                            <field name="picking_name"/>
                            <field name="scheduled_date"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="action_delete_stock_picking_line" type="object" string="Eliminar Transferencias Seleccionadas" class="btn-danger"/>
                    <button string="Cerrar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_internal_transfer_wizard" model="ir.actions.act_window">
        <field name="name">Internal Transfers</field>
        <field name="res_model">internal.transfer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]"/>
    </record>
</odoo>
