<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="web_login_label_override" inherit_id="web.login" name="Login label override">
    <!-- Cambiar el texto del label -->
    <xpath expr="//label[@for='login']" position="replace">
      <label for="login">Identificación</label>
    </xpath>
    <!-- Cambiar el placeholder del input -->
    <xpath expr="//input[@name='login']" position="attributes">
      <attribute name="placeholder">Identificación</attribute>
      <attribute name="aria-label">Identificación</attribute>
    </xpath>
  </template>
  
</odoo>
