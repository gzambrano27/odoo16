<odoo>
    <record id="view_product_category_form_inherit_asset" model="ir.ui.view">
      <field name="name">product.category.form.asset</field>
      <field name="model">product.category</field>
      <field name="inherit_id" ref="product.product_category_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//group[@name='first']" position="after">
            <group string="Asset Control">
                <field name="asset_fixed_control"/>
                <field name="asset_fixed_depreciable"/>
            </group>
        </xpath>
      </field>
    </record>
</odoo>