<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_prepayment_assignment_form_inherit" model="ir.ui.view">
		<field name="name">account.prepayment.assignment.form.inherit</field>
		<field name="model">account.prepayment.assignment</field>
		<field name="inherit_id" ref="account_payment_advance.view_account_prepayment_assignment_form" />
		<field name="arch" type="xml">
			<field name="date" position="after">
				<field name="company_id" invisible="1" />
				<field name="journal_type" invisible="1"/>
                        <field name="new_journal_id"
							   attrs="{'required':[('journal_type','=','general')],'invisible':[('journal_type','!=','general')]}"
							   options="{'limit': 10, 'no_create':True,'no_edit':True,'no_open':True}"  required="0"
						domain="[('company_id','=',company_id),('type','in',('cash','bank'))]"
						/>
			</field>
<field name="prepayment_aml_id" position="attributes">
<attribute name="options">{'no_create':True,'no_edit':True,'no_open':True}</attribute>

</field>
		</field>
	</record>


</odoo>