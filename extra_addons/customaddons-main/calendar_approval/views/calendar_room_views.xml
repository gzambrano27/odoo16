<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista Tree para Salas -->
    <record id="view_calendar_room_tree" model="ir.ui.view">
        <field name="name">calendar.room.tree</field>
        <field name="model">calendar.room</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="capacidad_minima"/>
                <field name="capacidad_maxima"/>
                <field name="responsible_id"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario para Salas -->
    <record id="view_calendar_room_form" model="ir.ui.view">
        <field name="name">calendar.room.form</field>
        <field name="model">calendar.room</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="capacidad_minima"/>
                        <field name="capacidad_maxima"/>
                        <field name="responsible_id" widget="many2one_avatar_user"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para Salas -->
    <record id="action_calendar_room" model="ir.actions.act_window">
        <field name="name">Salas</field>
        <field name="res_model">calendar.room</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú para Salas -->
    <menuitem id="menu_calendar_room"
              name="Salas"
              parent="calendar.mail_menu_calendar"
              action="action_calendar_room"
              sequence="100"/>
</odoo>
