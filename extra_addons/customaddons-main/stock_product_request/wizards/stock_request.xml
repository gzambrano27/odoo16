<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_request_wizard_form" model="ir.ui.view">
        <field name="name">stock.request.wizard.from</field>
        <field name="model">stock.request.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Stock Request">
                <group colspan="4">
                    <group>
                        <field name="option" required="1" />
                        <field name="wh_from"
                               attrs="{'required': [('option', '=', 'export')], 'invisible': [('option', '=', 'import')]}"
                               options="{'no_open': True, 'no_quick_create':True,'no_create_edit':True}" />
                        <field name="expected_date"
                               attrs="{'invisible': [('option', '=', 'export')]}" />
                        <field name="name" invisible="1"
                               attrs="{'invisible': [('option', '=', 'export')]}" />
                        <field name="xlsx_file"
                               filename="name"
                               attrs="{'required': [('option', '=', 'import')], 'invisible': [('option', '=', 'export')]}" />
                    </group>
                    <group>
                        <field name="company_id"
                               options="{'no_open': True, 'no_quick_create':True,'no_create_edit':True}" />
                        <field name="wh_to"
                               domain="[('id', '!=', wh_from)]"
                               widget="many2many_tags"
                               options="{'no_open': True, 'no_quick_create':True,'no_create_edit':True}"
                               attrs="{'invisible': [('option', '=', 'import')]}"/>
                        <field name="picking_policy"
                               attrs="{'invisible': [('option', '=', 'export')]}" />
                        <field name="priority"
                               attrs="{'invisible': [('option', '=', 'export')]}" />
                        <field name="allow_negative"
                               groups="stock_request_product.group_negative_product_request"
                               attrs="{'invisible': [('option', '=', 'export')]}" />

                    </group>
                </group>
                <footer>
                    <button name="button_export"
                            string="Export"
                            class="oe_highlight"
                            type="object"
                            attrs="{'invisible': [('option', '=', 'import')]}"/>
                    <button name="button_import"
                            string="Import"
                            class="oe_highlight"
                            type="object"
                            attrs="{'invisible': [('option', '=', 'export')]}"/>
                    or
                    <button special="cancel"
                            string="Cancel"
                            class="oe_link" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_request_wizard" model="ir.actions.act_window">
        <field name="name">Bulk Stock Request</field>
        <field name="res_model">stock.request.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_stock_request_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_stock_request_wizard"
              parent="stock.menu_stock_warehouse_mgmt"
              action="action_stock_request_wizard"
              sequence="99" />

</odoo>
