    <!-- stock.product.request.line tree view -->
    <record id="view_stock_product_request_line_tree" model="ir.ui.view">
        <field name="name">stock.product.request.line.view.tree</field>
        <field name="model">stock.product.request.line</field>
        <field name="arch" type="xml">
            <tree string="Request Product Detail" editable="bottom">
                <field name="company_ids" invisible="1" />
                <field name="company_id" invisible="1" />
                <field name="product_id"
                       domain="[('type', 'in', ['consu', 'product'])]"
                       options="{'no_open': True, 'no_quick_create':True,'no_create_edit':True}"/>
                <field name="route_ids"
                       widget="many2many_tags"
                       invisible="1" />
                <field name="route_id"
                       options="{'no_open': True, 'no_quick_create':True,'no_create_edit':True}"/>
                <field name="product_uom_qty" sum="total" />
                <field name="product_uom_qty_current" />
                <field name="product_uom_qty_residual" />
                <field name="product_uom"
                       options="{'no_open': True, 'no_quick_create':True,'no_create_edit':True}" />
                <field name="expected_date"/>
                <field name="warehouse_id" invisible="1" />
                <field name="type" invisible="1" />
                <field name="location_id" invisible="1" />
                <field name="location_src_id" invisible="1" />
                <field name="location_dest_id" invisible="1" />
                <field name="location_trans_id" invisible="1" />
                <field name="out_picking_type_id" invisible="1" />
                <field name="in_picking_type_id" invisible="1" />
                <field name="state" />
            </tree>
        </field>
    </record>


    <!-- stock.product.request.line search view -->
    <record id="view_stock_product_request_line_search" model="ir.ui.view">
        <field name="name">stock.product.request.line.view.search</field>
        <field name="model">stock.product.request</field>
        <field name="arch" type="xml">
            <search string="Product Request">
                <field name="product_id" />
                <field name="route_id" />
            </search>
        </field>
    </record>

    <!-- stock.product.request.line form view -->
    <record id="view_stock_product_request_line_form" model="ir.ui.view">
        <field name="name">stock.product.request.line.view.form</field>
        <field name="model">stock.product.request.line</field>
        <field name="arch" type="xml">
            <form string="Request Product">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="product_id" placeholder="Product"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="route_ids" invisible="1" />
                            <field name="route_id" />
                            <label for="product_uom" string="Quantity" />
                            <div>
                                <field name="product_uom_qty" class="eo_inline"/> -
                                <field name="product_uom" class="eo_inline" />
                            </div>
                            <field name="product_uom_qty_current" />
                            <field name="product_uom_qty_residual" />
                        </group>
                        <group>
                            <field name="type" />
                            <field name="expected_date"/>
                            <field name="warehouse_id" invisible="1" />
                            <field name="location_id" invisible="1" />
                            <field name="location_src_id" invisible="1" />
                            <field name="location_dest_id" invisible="1" />
                            <field name="location_trans_id" invisible="1" />
                            <field name="out_picking_type_id" invisible="1" />
                            <field name="in_picking_type_id" invisible="1" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- for button -->
    <record id="action_stock_request_product_line" model="ir.actions.act_window">
        <field name="name">Request Product</field>
        <field name="res_model">stock.product.request.line</field>
        <field name="view_mode">tree,form</field>
    </record>



    <!-- stock.picking tree inherit view -->
    <record id="view_stock_picking_tree_inherit" model="ir.ui.view">
        <field name="name">stock.picking.view.tree.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="route_request" />
            </xpath>
        </field>
    </record>

    <!-- stock.picking form inherit view -->
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">view.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="route_request"
                       readonly="1"
                       attrs="{'invisible': [('route_request', '=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
