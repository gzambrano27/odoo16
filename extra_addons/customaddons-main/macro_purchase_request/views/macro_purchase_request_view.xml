<odoo>
    <menuitem
        id="parent_menu_macro_purchase_request"
        name="Macro Previo Requisiciones APU"
        sequence="24"
        web_icon="macro_purchase_request,static/description/icon.png"
        groups="macro_purchase_request.group_macro_purchase_request_viewer,macro_purchase_request.group_macro_purchase_request_user,macro_purchase_request.group_macro_purchase_request_manager"
    />

    <menuitem
        id="menu_macro_purchase_request"
        name="Macro Previo Requisiciones APU"
        parent="parent_menu_macro_purchase_request"
        sequence="10"
        groups="macro_purchase_request.group_macro_purchase_request_viewer,macro_purchase_request.group_macro_purchase_request_user,macro_purchase_request.group_macro_purchase_request_manager"
    />

    <record id="view_macro_purchase_request_form" model="ir.ui.view">
        <field name="name">macro.purchase.request.form</field>
        <field name="model">macro.purchase.request</field>
        <field name="arch" type="xml">
            <form string="Macro Previo Req APU">
                <header>
                    
                    <button
                        name="button_draft"
                        states="to_approve,approved,rejected,in_progress,done"
                        string="Reset"
                        type="object"
                        groups="macro_purchase_request.group_macro_purchase_request_manager, macro_purchase_request.group_macro_purchase_request_jefe"
                    />
                    <button
                        name="button_to_approve"
                        states="draft"
                        string="Request approval"
                        type="object"
                        class="oe_highlight"
                        groups="macro_purchase_request.group_macro_purchase_request_manager, macro_purchase_request.group_macro_purchase_request_jefe"
                    />
                    <button
                        name="button_approved"
                        states="to_approve"
                        string="Approve"
                        type="object"
                        class="oe_highlight"
                        groups="macro_purchase_request.group_macro_purchase_request_manager, macro_purchase_request.group_macro_purchase_request_jefe"
                    />
                    <button
                        name="button_in_progress"
                        states="approved"
                        string="In Progress"
                        type="object"
                        groups="macro_purchase_request.group_macro_purchase_request_manager, macro_purchase_request.group_macro_purchase_request_jefe"
                    />
                   
                    <button
                        name="button_done"
                        states="approved,in_progress"
                        string="Done"
                        type="object"
                        class="oe_highlight"
                        groups="macro_purchase_request.group_macro_purchase_request_manager, macro_purchase_request.group_macro_purchase_request_jefe"
                    />
                    <button
                        name="button_rejected"
                        states="to_approve,approved,in_progress"
                        string="Reject"
                        type="object"
                        groups="macro_purchase_request.group_macro_purchase_request_manager, macro_purchase_request.group_macro_purchase_request_jefe"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,to_approve,approved,done,in_progress"
                        statusbar_colors='{"approved":"blue"}'
                    />
                </header>
                <sheet>

                    <div class="oe_edit_only">
                        <field name="priority" widget="priority" class="me-3"/>
                        <label for="name" class="oe_inline" />
                    </div>
                    <h1>
                        <field name="name" class="oe_inline"/>
                    </h1>
                    <group>
                        <group>
                            <field name="requested_by"/>
                            <field name="assigned_to" string='Comprador' invisible ='1'/>
                            <field name="date_planned" required='1'/>
                            <field name="request_type"/>
                            <field name="fiscalizador_id" options='{"always_reload": True, "no_quick_create": True, "no_create_edit": True}' />
                            <field name="tipo_contrato" />
                        </group>
                        <group>
                            <field name="origin" class="oe_inline"/>
                            <field name="description"/>
                            <field name="group_id"/>
                            <field name="show_estado_revision" invisible = '1'/>
                            <field name="estado_revision" invisible = '1'/>
                            <field name="sale_order_id" readonly = '1'/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="picking_type_id"/>
                            <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="line_ids" attrs="{'readonly': [('state', '!=', 'draft')]}" mode="tree">
                                <tree decoration-muted="cancelled == True" editable="bottom">                
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id" options='{"always_reload": True, "no_quick_create": True, "no_create_edit": True}'/>
                                    <field name="name" />
                                    <field name="tipo_costo" readonly="1" optional="hide"/>
                                    <field name="rubro" readonly="1" optional="hide"/>
                                    <field name="product_brand_id" options='{"no_create": True, "no_create_edit": True}' optional="hide"/>
                                    <field name="product_categ_id" options='{"no_create": True, "no_create_edit": True}' optional="hide"/>
                                    <field name="product_qty" />
                                    <field name="analytic_account_names" optional="hide"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="product_uom_id" invisible="1" groups="!uom.group_uom"/>
                                    <field name="product_uom_id" groups="uom.group_uom"/>
                                    <field name="costo_unit_apu" optional="hide" groups="analytic.group_analytic_accounting"/>
                                    <field
                                        name="analytic_distribution"
                                        widget="analytic_distribution"
                                        groups="analytic.group_analytic_accounting"
                                        options="{'product_field': 'product_id', 'business_domain': 'purchase_order'}"
                                    />
                                    <field name="date_required" optional="hide"/>
                                    <field name="currency_id" invisible="1" />
                                    <field
                                        name="company_id"
                                        groups="base.group_multi_company"
                                        widget="selection"
                                         optional="hide"
                                    />
                                    <field name="cancelled" invisible="1" />                                    
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="currency_id" invisible="1" />                                
                            </group>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </sheet>
                
            </form>
        </field>
    </record>
    <record id="view_macro_purchase_request_tree" model="ir.ui.view">
        <field name="name">macro.purchase.request.tree</field>
        <field name="model">macro.purchase.request</field>
        <field name="arch" type="xml">
            <tree
                decoration-bf="message_needaction==True"
                decoration-info="state in ('draft','to_approve')"
                decoration-muted="state in ('rejected')"
                name="Purchase Request"
            >
                <field name="message_needaction" invisible="1" />
                <field name="priority" optional="show" widget="priority" nolabel="1"/>
                <field name="request_type" />
                <field name="sale_order_id" readonly = '1'/>
                <field name="name" />
                <field name="date_start" />
                <field name="requested_by" widget="many2one_avatar_user" />
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                    widget="selection"
                />
                <field name="activity_ids" widget="list_activity" optional="show" />
                <field name="origin" optional="hide"/>
                <field name="currency_id" invisible="1" />
                <field
                    name="state"
                    widget="badge"
                    decoration-success="state in ('done', 'approved', 'in_progress')"
                    decoration-muted="state == 'draft'"
                    decoration-warning="state == 'to_approve'"
                    decoration-danger="state == 'rejected'"
                />
            </tree>
        </field>
    </record>
    <record id="view_macro_purchase_request_search" model="ir.ui.view">
        <field name="name">macro.purchase.request.list.select</field>
        <field name="model">macro.purchase.request</field>
        <field name="arch" type="xml">
            <search string="Search Purchase Request">
                <field name="name" string="Purchase Request" />
                <separator />
                <field name="product_id" />
                <field name="state" />
                <filter
                    name="unassigned"
                    string="Unassigned"
                    domain="[('assigned_to','=', False)]"
                    help="Unassigned Request"
                />
                <separator />
                <filter
                    name="state_draft"
                    string="Draft"
                    domain="[('state','=','draft')]"
                    help="Request is to be approved"
                />
                <filter
                    name="state_to_approve"
                    string="To Approve"
                    domain="[('state','=','to_approve')]"
                    help="Request is to be approved"
                />
                <filter
                    name="state_approved"
                    string="Approved"
                    domain="[('state','=','approved')]"
                    help="Request is approved"
                />
                <filter
                    name="state_in_progress"
                    string="In Progress"
                    domain="[('state','=','in_progress')]"
                    help="Request is in progress"
                />
                <filter
                    name="state_rejected"
                    string="Rejected"
                    domain="[('state','=','rejected')]"
                    help="Request is rejected"
                />
                <filter
                    name="state_done"
                    string="Done"
                    domain="[('state','=','done')]"
                    help="Request is done"
                />
                <separator />
                <filter
                    string="Unread Messages"
                    name="message_needaction"
                    domain="[('message_needaction','=',True)]"
                />
                <filter
                    name="assigned_to_me"
                    domain="[('assigned_to','=', uid)]"
                    help="Assigned to me"
                />
                <filter
                    name="my_requests"
                    domain="[('requested_by','=', uid)]"
                    help="My requests"
                />
                <filter string="Tipo Producto" name="request_type_product"
                        domain="[('request_type', '=', 'product')]"/>
                <filter string="Tipo Servicio" name="request_type_service"
                        domain="[('request_type', '=', 'service')]"/>
                <filter string="Tipo Producto y Servicio" name="request_type_mixto"
                        domain="[('request_type', '=', 'mixed')]"/>
                <field name="requested_by" />
                <field name="assigned_to" />
                <field name="picking_type_id" />
                <group expand="0" string="Group By...">
                    <filter
                        name="requested_by"
                        string="Requested by"
                        icon="fa-user"
                        domain="[]"
                        context="{'group_by':'requested_by'}"
                    />
                    <filter
                        name="assigned_to"
                        string="Assigned to"
                        icon="fa-user"
                        domain="[]"
                        context="{'group_by':'assigned_to'}"
                    />
                    <filter
                        name="source"
                        string="Source"
                        icon="fa-caret-square-o-left"
                        domain="[]"
                        context="{'group_by':'origin'}"
                    />
                    <filter
                        name="start_date"
                        string="Start Date"
                        icon="fa-calendar"
                        domain="[]"
                        context="{'group_by':'date_start'}"
                    />
                    <filter string="Tipo de PR" name="request_type" domain="[]" context="{'group_by': 'request_type'}"/>
                </group>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="macro_purchase_request_form_action">
        <field name="name">Macro Purchase Requests</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">macro.purchase.request</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_requested_by":uid}</field>
        <field name="search_view_id" ref="view_macro_purchase_request_search" />
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to start a new macro purchase request process.
            </p>
            <p>
                A macro purchase request is an instruction to Purchasing to procure
            a certain quantity of materials services, so that they are
            available at a certain point in time.
            </p>
        </field>
    </record>
    
    <menuitem
        id="menu_macro_purchase_request_act"
        sequence="10"
        parent="menu_macro_purchase_request"
        action="macro_purchase_request_form_action"
    />
</odoo>
