<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Regla: Solo lectura para el grupo Viewer -->
    <record id="macro_purchase_request_viewer_rule" model="ir.rule">
        <field name="name">Macro Purchase Request Viewer</field>
        <field name="model_id" ref="model_macro_purchase_request"/>
        <field name="groups" eval="[(6,0,[ref('macro_purchase_request.group_macro_purchase_request_viewer')])]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>

    <!-- Regla: Solo lectura para líneas -->
    <record id="macro_purchase_request_line_viewer_rule" model="ir.rule">
        <field name="name">Macro Purchase Request Line Viewer</field>
        <field name="model_id" ref="model_macro_purchase_request_line"/>
        <field name="groups" eval="[(6,0,[ref('macro_purchase_request.group_macro_purchase_request_viewer')])]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>

    <!-- Regla multicompañía para cabecera -->
    <record model="ir.rule" id="macro_purchase_request_comp_rule">
        <field name="name">Macro Purchase Request multi-company</field>
        <field name="model_id" ref="model_macro_purchase_request"/>
        <field name="global" eval="True"/>
        <field name="domain_force">
            ['|',('company_id','=',False),('company_id', 'in', company_ids)]
        </field>
    </record>

    <!-- Regla multicompañía para líneas -->
    <record model="ir.rule" id="macro_purchase_request_line_comp_rule">
        <field name="name">Macro Purchase Request Line multi-company</field>
        <field name="model_id" ref="model_macro_purchase_request_line"/>
        <field name="global" eval="True"/>
        <field name="domain_force">
            ['|',('company_id','=',False),('company_id', 'in', company_ids)]
        </field>
    </record>

    <!-- Regla: Acceso del solicitante (User) -->
    <record id="macro_purchase_request_rule" model="ir.rule">
        <field name="name">Macro Purchase Request User</field>
        <field name="model_id" ref="model_macro_purchase_request"/>
        <field name="groups" eval="[(6,0, [ref('macro_purchase_request.group_macro_purchase_request_user')])]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="domain_force">[('requested_by','=',user.id)]</field>
    </record>

    <!-- Regla: Acceso completo del Manager -->
    <record id="macro_purchase_request_manager_rule" model="ir.rule">
        <field name="name">Macro Purchase Request Manager</field>
        <field name="model_id" ref="model_macro_purchase_request"/>
        <field name="groups" eval="[(6,0, [ref('macro_purchase_request.group_macro_purchase_request_manager')])]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <!-- Regla: Líneas visibles por solicitante -->
    <record id="macro_purchase_request_line_rule" model="ir.rule">
        <field name="name">Macro Purchase Request Line User</field>
        <field name="model_id" ref="model_macro_purchase_request_line"/>
        <field name="groups" eval="[(6,0, [ref('macro_purchase_request.group_macro_purchase_request_user')])]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="domain_force">[('request_id.requested_by','=',user.id)]</field>
    </record>

    <!-- Regla: Acceso completo a líneas para Manager -->
    <record id="macro_purchase_request_line_manager_rule" model="ir.rule">
        <field name="name">Macro Purchase Request Line Manager</field>
        <field name="model_id" ref="model_macro_purchase_request_line"/>
        <field name="groups" eval="[(6,0, [ref('macro_purchase_request.group_macro_purchase_request_manager')])]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>
