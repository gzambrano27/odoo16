<odoo>
    <record model="ir.module.category" id="module_category_macro_purchase_request">
        <field name="name">Macro Purchase Request</field>
        <field name="sequence">15</field>
    </record>
    <record id="group_macro_purchase_request_viewer" model="res.groups">
        <field name="name">Macro Purchase Request Viewer</field>
        <field name="category_id" ref="module_category_macro_purchase_request" />
    </record>
    <record id="group_macro_purchase_request_user" model="res.groups">
        <field name="name">Macro Purchase Request User</field>
        <field name="implied_ids" eval="[(4, ref('macro_purchase_request.group_macro_purchase_request_viewer')), (4, ref('base.group_user'))]" />
        <field name="category_id" ref="module_category_macro_purchase_request" />
    </record>
    <record id="group_macro_purchase_request_jefe" model="res.groups">
        <field name="name">Macro Purchase Request Jefe</field>
        <field name="implied_ids" eval="[(4, ref('macro_purchase_request.group_macro_purchase_request_user'))]" />
        <field name="category_id" ref="module_category_macro_purchase_request"/>
    </record>
    
    <record id="group_macro_purchase_request_manager" model="res.groups">
        <field name="name">Macro Purchase Request Manager</field>
        <field name="implied_ids" eval="[(4, ref('macro_purchase_request.group_macro_purchase_request_jefe'))]"/>
        <field name="category_id" ref="module_category_macro_purchase_request" />
    </record>
    
</odoo>
