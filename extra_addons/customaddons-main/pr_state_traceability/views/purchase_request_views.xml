<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_purchase_reque_state_log_inherit" model="ir.ui.view">
    <field name="name">purchase.request.state.log.inh</field>
    <field name="model">purchase.request</field>
    <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
    <field name="arch" type="xml">
      <xpath expr="//notebook" position="inside">
        <page name='trazabilidad_pr' string="Trazabilidad" groups="pr_state_traceability.group_pr_state_traceability_view">
          <field name="state_log_ids" context="{'default_request_id': active_id}" readonly="1">
            <tree string='Logs' editable="bottom">
              <field name="changed_on"/>
              <field name="changed_by"/>
              <field name="state_from"/>
              <field name="state_to"/>
              <field name="note"/>
            </tree>
          </field>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
