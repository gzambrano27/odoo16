<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
   <!-- Views for clase  de importacion Tree View -->

    <record model="ir.ui.view" id="view_centro_costo_nombreproyecto_tree">
        <field name="name">centro.costo.nombreproyecto.tree</field>
        <field name="model">centro.costo.nombre.proyecto</field>
        <field name="groups_id" eval="[(6, 0, [ref('group_analytic_user')])]"/>
        <field name="arch" type="xml">
            <tree string="nombreproyecto">
                <field name="codigo" string="Codigo"/>
                <field name="name" string="Nombre"/>
                <field name="state" string="Estado"/>
            </tree>
        </field>
    </record> 
    
      <record model="ir.ui.view" id="view_centro_costo_nombreproyecto_form">
        <field name="name">centro.costo.nombreproyecto.form</field>
        <field name="model">centro.costo.nombre.proyecto</field>
        <field name="groups_id" eval="[(6, 0, [ref('group_analytic_user')])]"/>
        <field name="arch" type="xml">
            <form string="nombreproyecto">
	            <separator string="nombreproyecto" />
	            	<group>
           	            <group>
                           <field name="codigo" string="Codigo"/>
                           <field name="state" string="Estado"  style="width: 20%%"/>
                        </group>
		                <group>
	                    	<field name="name" string="Nombre"/>
	                    </group>
	                </group>
            </form>
        </field>
    </record>   
    
    <record id="action_centro_costo_nombreproyecto_form" model="ir.actions.act_window">
            <field name="name">Nombre Proyecto Centro Costo</field>
            <field name="res_model">centro.costo.nombre.proyecto</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'import_enabled': True}</field>
   </record>
   
   <menuitem id="menu_action_centro_costo_nombreproyecto" action="action_centro_costo_nombreproyecto_form" parent="account.menu_analytic_accounting" sequence="61" />

</data>
</odoo>
