<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		
	    
		<record id="view_analytic_account_inh_form_view" model="ir.ui.view">
            <field name="name">analytic.account.form.inherit</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
<!--             	<field name="name" position="attributes"> -->
<!--             		<attribute name="attrs">{'readonly': 1}</attribute> -->
<!--             	</field> -->
            	<field name="name" position="after">
            		<field name="descripcion"/>
            	</field>
            	<field name="partner_id" position="replace">
            		<field name="partner_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
            	</field>
            	<field name="partner_id" position="after">
            		<field name="ubicaciones_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
            		<field name="zona_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
					<field name="nombre_proyecto" invisible='1'/>
					<field name="nombre_proyecto_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
            	</field>
            	<field name="currency_id" position="after">
            		<field name="tipo_proy_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
            		<field name="nro_contrato"/>
            	</field>
            </field>
        </record>
        
        <record id="view_account_analytic_inh_list" model="ir.ui.view">
	      <field name="name">account.analytic.account.inh.list</field>
	      <field name="model">account.analytic.account</field>
	      <field name="inherit_id" ref="analytic.view_account_analytic_account_list"/>
	      <field name="arch" type="xml">
		      <field name="partner_id" position="after">
			      <field name="ubicaciones_id"/>
			      <field name="zona_id"/>
			      <field name="tipo_proy_id"/>
			      <field name="nro_contrato"/>
			</field>
	      </field>
	    </record>
	    
	    <record id="view_account_analytic_account_inh_search" model="ir.ui.view">
		    <field name="name">account.analytic.account.inh.search</field>
		    <field name="model">account.analytic.account</field>
		    <field name="inherit_id" ref="analytic.view_account_analytic_account_search"/>
		    <field name="priority" eval="8" />
		    <field name="arch" type="xml">
			    <xpath expr="//search" position="inside">
	                <group expand="0" string="Group By...">
		                <filter name="ubicaciones_id" string="Ubicaciones" domain="[]" context="{'group_by':'ubicaciones_id'}" />
		                <filter name="zona_id" string="Zona" domain="[]" context="{'group_by':'zona_id'}" />
		                <filter name="tipo_proy_id" string="Tipo Proyecto" domain="[]" context="{'group_by':'tipo_proy_id'}" />
		            </group>
	           </xpath>
		        
		    </field>
		</record>
		
    </data>
</odoo>
