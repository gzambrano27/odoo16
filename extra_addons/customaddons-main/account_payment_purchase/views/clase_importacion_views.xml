<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Secuencia para el tipo de orden de producciÃ³n A -->
        <record id="seq_reg_clase_importacion" model="ir.sequence">
            <field name="name">Registro Importacion</field>
            <field name="code">IMPORT</field>
            <field name="prefix">IMPORT</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
<data>
   <!-- Views for clase  de importacion Tree View -->
    
    <record model="ir.ui.view" id="view_clase_importacion_tree">
        <field name="name">clase.importacion.tree</field>
        <field name="model">clase.importacion</field>
        <field name="groups_id" eval="[(6, 0, [ref('group_account_import_user')])]"/>
        <field name="arch" type="xml">
            <tree string="Familia 2">
                <field name="codigo" string="Codigo"/>
                <field name="documento_transporte"/>
                <field name="proveedor_id"/>
                <field name="name" string="Descripcion"/>
                <field name="state" string="Estado"/>
            </tree>
        </field>
    </record> 
    
      <record model="ir.ui.view" id="view_clase_importacion_form">
        <field name="name">clase.importacion.form</field>
        <field name="model">clase.importacion</field>
        <field name="groups_id" eval="[(6, 0, [ref('group_account_import_user')])]"/>
        <field name="arch" type="xml">
            <form string="Familia 2">
	            <separator string="Clases" />
	            	<group>
                        <field name="secuencial" string="Secuencia"/>
           	            <group>
                           <field name="codigo" string="Codigo"/>
                           <field name="state" string="Estado"  style="width: 20%%"/>
                        </group>
		                <group>
                            <field name="documento_transporte" string="Doc. Transporte"/>
                            <field name="proveedor_id" string="Proveedor" options='{"always_reload": True, "no_quick_create": True, "no_create_edit": True}'/>
                            
	                    	<field name="name" string="Descripcion"/>
	                    </group>
	                </group>
            </form>
        </field>
    </record>   
    
    <record id="action_clase_importacion_form" model="ir.actions.act_window">
            <field name="name">Classes Importacion</field>
            <field name="res_model">clase.importacion</field>
            <field name="view_mode">tree,form</field>       
   </record>
   
   <menuitem id="menu_action_clase_importacion" action="action_clase_importacion_form" parent="account.menu_finance_configuration"/>

</data>
</odoo>
