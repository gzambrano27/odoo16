<?xml version="1.0"?>
<odoo>
	<data>

		<record id="purchase_order_line_report_wizard_view_form"
			model="ir.ui.view">
			<field name="name">purchase.order.line.report.wizard.form</field>
			<field name="model">purchase.order.line.report.wizard</field>
			<field name="type">form</field>
			<field eval="8" name="priority" />
			<field name="arch" type="xml">
				<form string="Reportes de Lineas de Orden de Compra"
					version="16.0">
					<header>

					</header>
						<group>
							<field name="company_ids"
							widget="many2many_tags"
								   options="{'no_create':True,'no_edit':True,'no_open':True}"
							/>
							<field name="date_from" />
							<field name="date_to" />
						</group>
					<newline />
					<footer>
						<button name="process" type="object" string="Procesar"
							icon='fa-cogs' />
						<button special="cancel" name="cancel" string="Salir"
							colspan="2" type="object" icon='fa-times' />
					</footer>
				</form>
			</field>
		</record>


		<record id="purchase_order_line_report_wizard_view_file_action"
			model="ir.actions.act_window">
			<field name="name">Reporte de Orden de Compra</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">purchase.order.line.report.wizard</field>
			<field name="view_mode">form</field>
			<field name="view_id"
				ref="purchase_order_line_report_wizard_view_form" />
			<field name="context">{}</field>
			<field name="target">new</field>
		</record>


	</data>
</odoo>